    position: absolute;
    left: 0;
    top: 46%;
    transform: translateY(-50%);
    width: 32rpx;
    height: 32rpx;
}

.invoice-title-detail {
    padding: 0 32rpx 32rpx;
}

.invoice-title-detail .item {
    margin-bottom: 30rpx;
    padding-right: 60rpx;
    border: 1px solid #ededed;
    border-radius: 20rpx;
}

.invoice-title-detail .item.number {
    padding-right: 120rpx;
}

.invoice-title-detail .item:last-child {
    margin: 0;
}

.invoice-title-detail .invoice-record {
    left: 0;
    top: 90rpx;
    width: 100%;
    padding: 0 32rpx;
    font-size: 26rpx;
    color: #999;
    background: #f5f5f5;
    -webkit-border-radius: 20rpx;
    border-radius: 20rpx;
    border: 1px solid #e1e1e1;
    height: 230rpx;
    box-shadow: 0 0 20rpx #c1c1c1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    z-index: 33;
}

.invoice-record view {
    padding: 20rpx 0;
    border-bottom: 1px solid #ededed;
}

.invoice-title-detail input {
    width: 100%;
    height: 80rpx;
    line-height: 1;
    font-size: 28rpx;
    padding: 0 60rpx 0 32rpx;
    border-radius: 20rpx;
}

.invoice-title-detail .del_btn {
    position: absolute;
    right: 18rpx;
    top: 50%;
    display: block;
    width: 30rpx;
    height: 30rpx;
    margin-top: -15rpx;
    background: url(https://shgm.jjyyx.com/m/images/del.png) no-repeat center;
    -webkit-background-size: 30rpx;
    background-size: 30rpx;
    z-index: 2;
}

.invoice-title-detail  .number .del_btn {
    right: 72rpx;
}

.del_btn::after {
    content: '';
    position: absolute;
    left: -30rpx;
    top: -22rpx;
    width: 60rpx;
    height: 80rpx;
}

.invoiceNo-tips {
    display: block;
    position: absolute;
    right: 16rpx;
    top: 50%;
    margin-top: -14rpx;
    width: 28rpx;
    height: 28rpx;
    z-index: 2;
}

.invoiceNo-tips::after {
    content: '';
    position: absolute;
    left: 0;
    top: -26rpx;
    width: 60rpx;
    height: 80rpx;
}

.invoiceNo-tips image {
    width: 28rpx;
    height: 28rpx;
}

.tips-mask {
    position: fixed;
    left: 0;
    top: 100%;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 99;
    transition: all 0.6s;
}

.fadeInUp-box {
    top: 0;
    -webkit-animation: fadeInUp 0.6s;
    animation: fadeInUp 0.6s;
}

.tips-mask .mask {
    position: absolute;
    top: 50%;
    left: 5%;
    width: 90%;
    z-index: 999;
    transform: translateY(-50%);
    border-radius: 16rpx;
    background: #fff;
}

.tips-mask .h3 {
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
    text-align: center;
}

.tips-mask .mask-wrap {
    height: 310rpx;
}

.tips-mask .p {
    padding: 40rpx 32rpx;
    font-size: 28rpx;
    color: #777;
}

.mask-cancel {
    color: #fff;
    font-size: 32rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
    background: #FF4752;
}

/**
  * fadeInUp
 */

@-webkit-keyframes fadeInUp {
    from {
        opacity: 0;
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
    }

    to {
        opacity: 1;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        -webkit-transform: translate3d(0, 100%, 0);
        transform: translate3d(0, 100%, 0);
    }

    to {
        opacity: 1;
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }
}

.fadeInUp {
    -webkit-animation-name: fadeInUp;
    animation-name: fadeInUp;
}

@keyframes marque-animation {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }
}

.marquee {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    border: none;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: clip;
    position: relative;
    font-size: 28rpx;
}

.marquee .content {
    display: inline-block;
    position: relative;
    padding-right: 0px;
    animation: marque-animation 11.3s linear infinite;
    white-space: nowrap;
}
.marquee .content text{
    font-size: 14px;
}