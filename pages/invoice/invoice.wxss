.invoice-swiper {
    height: 96rpx;
    line-height: 96rpx;
    padding: 0 18rpx 0 32rpx;
}

.invoice-swiper switch {
    zoom: 0.9;
}

.invoice-type .h3 {
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 32rpx;
}

.sel-type {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: stretch;
    align-content: stretch;
    padding: 0 32rpx;
}

.sel-type view {
    flex: 0 1 auto;
    width: 210rpx;
    height: 64rpx;
    font-size: 26rpx;
    line-height: 64rpx;
    text-align: center;
    border: 1px solid #ccc;
    margin-bottom: 32rpx;
    margin-right: 30rpx;
    border-radius: 32rpx;
    -webkit-border-radius: 32rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.sel-type view:nth-child(3n), .sel-type view.min-w:nth-child(4n) {
    margin-right: 0;
}

.sel-type view.min-w {
    width: 160rpx;
    margin-right: 15rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.sel-type .sel {
    color: #FF4752;
    border: 1px solid #FF4752;
}

.save-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 32rpx 0;
    background: #fff;
}

.save-btn button {
    display: block;
    width: 646rpx;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
    margin: 0 auto;
    background: #FF4752;
    color: #fff;
    -webkit-border-radius: 48rpx;
    border-radius: 48rpx;
}

.issue-address {
    color: #999;
    font-size: 24rpx;
    padding: 32rpx 32rpx 186rpx 32rpx;
}

.cross-border {
    padding-bottom: 186rpx;
}

.invoice-alert, .explain {
    display: inline-block;
    position: relative;
    padding-left: 40rpx;
    margin-bottom: 20rpx;
    vertical-align: middle;
}
.explain {
    margin: 1rpx 0 0 12rpx;
}
