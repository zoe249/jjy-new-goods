    background: #ededed;
}

.explain {
    padding: 0 32rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: right;
    background: #ededed;
    color: #777;
}

.tips-mod {
    position: relative;
    padding: 0 74rpx 0 32rpx;
    background: #fff9f5;
