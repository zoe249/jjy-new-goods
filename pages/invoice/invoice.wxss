    line-height: 80rpx;
    color: #999;
}

.tips-mod .scroll-marquee-box {
    position: relative;
    height: 80rpx;
}

.icon-laba {
    position: absolute;
    left: 32rpx;
    top: 50%;
    display: block;
    width: 36rpx;
    height: 36rpx;
    transform: translateY(-50%);
