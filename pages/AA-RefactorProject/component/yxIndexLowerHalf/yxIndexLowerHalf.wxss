@import '../../common/css/css.wxss';

.content {
	margin: 0 20rpx;
	margin-bottom: 47rpx;
	min-height: 1300rpx;
}

.top_img {
	width: 710rpx;
	height: 242rpx;
	border-radius: 30rpx;
}

.scrollList {
	white-space: nowrap;
	background-color: #f4f6fa;
	z-index: 3;
}

.list:nth-of-type(1) {
	margin-left: 47rpx;
}

.list {
	display: inline-block;
	margin-left: 44rpx;
	text-align: -webkit-center;
	vertical-align:top;
}
.lastList{
	width: 44rpx;
	height: 20rpx;
	display: inline-block;
}

.selectMenu>view:nth-child(1) {
	color: #FC0D1B !important;
	font-family: PingFangSC-Medium !important;
	font-weight: 500 !important;
}

.selectMenu>view:nth-child(2) {
	height: 32rpx !important;
	background: #FC0D1B !important;
	border-radius: 16rpx !important;
	color: #ffffff !important;
	text-align: center !important;
	line-height: 32rpx !important;
	padding: 0 10rpx;
}

.list>view:nth-child(1) {
	height: 32rpx;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #101010;
	letter-spacing: 0;
	line-height: 32rpx;
	font-weight: 400;
	margin-bottom: 9rpx;
}

.list>view:nth-child(2) {
	height: 32rpx;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #999999;
	letter-spacing: 0;
	line-height: 32rpx;
	font-weight: 400;
	padding: 0 10rpx;
}

.img {
	width: 346rpx;
	height: 518rpx;
	border-radius: 30rpx;
}

.picture {
	margin-top: 26rpx;
	display: flex;
	justify-content: space-between;
}

.picture swiper:first-child {
	margin-bottom: 21rpx;
	-webkit-column-break-inside: avoid;
	height: 518rpx;
}

.picture>view {
	margin-bottom: 18rpx;
	-webkit-column-break-inside: avoid;
}

.productName {
	width: 310rpx;
	font-family: PingFangSC-Medium;
	font-size: 26rpx;
	color: #101010;
	letter-spacing: 0;
	line-height: 34rpx;
	font-weight: 500;
	margin-top: 20rpx;
	overflow: hidden;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	margin-bottom: 8rpx;
}

.productInfo {
	width: 320rpx;
	height: 24rpx;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #999999;
	letter-spacing: 0;
	line-height: 24rpx;
	font-weight: 400;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	margin-bottom: 20rpx;
}

.productOldPrice {
	width: 58rpx;
	height: 26rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #C7C7C7;
	letter-spacing: 0;
	line-height: 26rpx;
	font-weight: 400;
	text-decoration: line-through;
	margin-bottom: 8rpx;
}

.newPrice .one {
	width: 25rpx;
	height: 36rpx;
	font-family: PingFangSC-Semibold;
	font-size: 26rpx;
	color: #FC0D1B;
	letter-spacing: 0;
	line-height: 36rpx;
	font-weight: 600;
}

.newPrice .two {
	height: 36rpx;
	font-family: PingFangSC-Semibold;
	font-size: 36rpx;
	color: #FC0D1B;
	letter-spacing: 0;
	line-height: 36rpx;
	font-weight: 600;
}

.newPrice .three {
	height: 36rpx;
	font-family: PingFangSC-Semibold;
	font-size: 26rpx;
	color: #FC0D1B;
	letter-spacing: 0;
	line-height: 36rpx;
	font-weight: 600;
}

.newPrice .four {
	height: 36rpx;
	font-family: PingFangSC-Semibold;
	font-size: 24rpx;
	color: #FC0D1B;
	letter-spacing: 0;
	line-height: 36rpx;
	font-weight: 600;
	margin-right: 1rpx;
}

.newPrice .five {
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #666666;
	letter-spacing: 0;
	line-height: 24rpx;
	font-weight: 400;
}

.newPrice {
	margin-bottom: 24rpx;
	display: flex;
	align-items: baseline;
	position: relative;
}


.gouwuche {
	width: 48rpx;
	height: 48rpx;
	display: inline-block;
	position: absolute;
	right: 0rpx;
	bottom: 0rpx;
}

.swiperContent {
	position: relative;
	width: 346rpx;
	height: 518rpx;
	margin-bottom: 18rpx;
	border-radius: 30rpx;
}

.bannerdots {
	position: absolute;
	left: 31rpx;
	bottom: 17rpx;
}

/*未选中时的小圆点样式 */
.bannerdot {
	width: 10rpx;
	height: 6rpx;
	margin-right: 4rpx;
	background-color: #ffffff;
	border-radius: 5px;
	opacity: 0.6;
}

/*选中以后的小圆点样式  */
.banneractive {
	width: 10rpx;
	height: 6rpx;
	margin-right: 4rpx;
	background-color: #ffffff;
	border-radius: 5px;
	opacity: 1;
}

.flex {
	display: -webkit-box;
	display: -moz-box;
	display: -ms-flexbox;
	display: -webkit-flex;
	display: flex;
	display: box;
	flex-wrap: wrap;
}

.alignC {
	/*元素居中*/
	align-items: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	-moz-align-items: center;
	-ms-align-items: center;
	-o-align-items: center;
}

.flexC {
	-webkit-box-pack: center;
	justify-content: center;
	-webkit-justify-content: center;
	-moz-justify-content: center;
	-ms-justify-content: center;
	-o-justify-content: center;
}

.smallPinTuan {

	width: 80rpx !important;
}

.pintuan {
	width: 131rpx;
	height: 44rpx;
	position: absolute;
	right: 0rpx;
	bottom: -5rpx;
	background: #FC0D1B;
	border-radius: 22px;
	display: flex;
	justify-content: center;
	align-items: center;
}

.pintuan>image:first-child {
	width: 19rpx;
	height: 25rpx;
	display: inline-block;
}

.pintuan>image:last-child {
	width: 10rpx;
	height: 20rpx;
	display: inline-block;
	margin-left: 5rpx;
}

.pintuan>view {
	font-family: PingFangSC-Medium;
	font-size: 24rpx;
	color: #FFFFFF;
	letter-spacing: 0;
	line-height: 24rpx;
	font-weight: 500;
	display: inline-block;
}
.productImgContent{
	height: 345rpx;
	width: 346rpx;
	position: relative;
	border-radius: 24rpx 24rpx 0 0;
}
.productImage {
	height: 100%;
	width: 100%;
	border-radius: 24rpx 24rpx 0 0;
}

.productImage_other {
	position: absolute;
	top: 10rpx;
	left: 10rpx;
	z-index: 3;
	width: 64rpx;
	height: 64rpx;
}
.productImage_other image{
	width: 100%;
	height: 100%;
}

.productImage_double {
	position: absolute;
	top: 0rpx;
	left: 0rpx;
	width: 115rpx;
	height: 40rpx;
}

.productImage_player {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
.productImage_player image{
	width: 58rpx;
	height: 58rpx;
}


.scrollListContent {
	position: relative;
	margin-top: 20rpx;
	display: flex;
}

.productContent {
	background: #FFFFFF;
	border-radius: 30rpx;
	width: 346rpx;
	margin-bottom: 18rpx;
}

.infoContent {
	padding-left: 20rpx;
	padding-right: 16rpx;
