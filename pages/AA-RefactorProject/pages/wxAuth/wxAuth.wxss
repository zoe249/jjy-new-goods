/* 加载中页面样式 */
.section {
	width: 100vw;
	height: 100vh;
	background: #fff;
	padding-top: 500rpx;
}

.section image {
	animation: ImgAnimation 1.7s infinite;
}

.section .shadow {
	background: rgba(0, 0, 0, .1);
	border-radius: 50%;
	transform: translate(0, 170rpx);
	animation: ShadowAnimation 1.7s infinite;
}



@keyframes ImgAnimation {
	0% {
		width: 200rpx;
		height: 200rpx;
		transform: translate(0, -150rpx);
	}

	50% {
		width: 200rpx;
		height: 200rpx;
		transform: translate(0, 150rpx);
	}

	100% {
		width: 200rpx;
		height: 200rpx;
		transform: translate(0, -150rpx);
	}
}

@keyframes ShadowAnimation {
	0% {
		width: 30rpx;
		height: 12rpx;
	}

	50% {
		width: 100rpx;
		height: 10rpx;
	}

	100% {
		width: 30rpx;
		height: 12rpx;
	}
}

