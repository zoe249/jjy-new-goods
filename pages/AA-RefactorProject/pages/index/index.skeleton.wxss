.sk-container {
	position: fixed;
	z-index: 998;
	top: 0;
	left: 0;
	width: 100vw;
	height: 2000rpx;
	min-height: 100vh;
	background: #F3F5F7;
	transition: all .3s ease;
	overflow: hidden;
	box-shadow: 0 26px 40px -24px rgba(0, 0, 0, 1);
}

.SkeletonImage {
	width: 100%;
	height: 100%;
}

.streamer {
	position: absolute;
	left: -200%;
	top: 0;
	width: 50%;
	height: 100%;
	background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0) 0, rgba(255, 255, 255, .5) 50%, rgba(255, 255, 255, 0) 100%);
	transform: skewx(-42deg);
	animation: Animation 2s infinite;
}



@keyframes Animation {
	0% {
		left: -200%;
	}

	100% {
		left: 200%;
	}
}
