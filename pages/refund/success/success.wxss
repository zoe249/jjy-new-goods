/* pages/refund/success/success.wxss */

page {
  background: #f4f4f4;
}

.clearfix:before, .clearfix:after {
  content: "";
  display: block;
  overflow: hidden;
  visibility: hidden;
  width: 0;
  height: 0;
}

.clearfix:after {
  clear: both;
}

.clearfix {
  zoom: 1;
}

.refund-success {
  background-color: #f4f4f4;
}

.refund-success .head {
  padding: 56rpx 32rpx 40rpx;
  margin-bottom: 16rpx;
  text-align: center;
  background-color: #fff;
}

.refund-success .head .text1 {
  display: inline-block;
  padding-left: 48rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  margin: 0 auto;
  color: #313031;
}

.refund-success .head .text2 {
  color: #898989;
  font-size: 24rpx;
  line-height: 36rpx;
}

.refund-success .cnt {
  margin: 0 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.refund-success .cnt .li {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}

.refund-success .cnt .li .li-l {
  float: left;
}

.refund-success .cnt .li .li-r {
  float: right;
  color: #999;
}

.refund-success .btn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 0rpx 0rpx 0;
  background-color: #fff;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  bborder-top:1rpx solid #f4f4f4;
}

.refund-success .btn-box .a {
  flex: 1;
  height: 112rpx;
  line-height: 112rpx;
  -webkit-box-sizing: content-box;
  box-sizing: content-box;
  font-size: 30rpx;
  text-align: center;
  color: var(--blue);
}

.refund-success .btn-box .btn-query {
}

.refund-success .btn-box .btn-service-phone {
  border-left: 1rpx solid #e6e6e6;
}
