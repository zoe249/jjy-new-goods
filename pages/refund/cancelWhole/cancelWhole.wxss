/*商品*/

.pro-box {
  background-color: #fff;
  margin: 15rpx;
  border-radius: 18rpx;
}

.pro-box .li {
  padding: 30rpx 0;
}

.pro-box .li .wrap {
  position: relative;
  height: 130rpx;
  padding: 0 32rpx;
}

.pro-box .li .cart-item .item-flag {
  position: absolute;
  top: 0;
  left: 16rpx;
  z-index: 9;
}

.pro-box .li .cart-item .item-flag image {
  width: 48rpx;
}

.pro-box .li .cart-item .item-img {
  position: relative;
  float: left;
  width: 130rpx;
  height: 130rpx;
  border: 1rpx solid #ededed;
  background: #fcfcfc url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat center;
  background-size: 100%;
}

.pro-box .li .cart-item .item-img .masker-refunded {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 128rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 48rpx;
  color: #fff;
  font-size: 24rpx;
}

.pro-box .li .cart-item .item-img .already-served {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  display: block;
  line-height: 0;
  font-size: 24rpx;
  padding: 16rpx 4rpx;
  border-radius: 4rpx;
  color: #7bca00;
  background-color: #edf7de;
}

.pro-box .li .cart-item .item-img image {
  width: 100%;
  height: 100%;
}

.pro-box .li .cart-item .item-info {
  position: relative;
  top: -6rpx;
  height: 136rpx;
  margin-left: 150rpx;
  word-break: break-all;
}

.pro-box .li .cart-item .item-info .h3 {
  padding-right: 100rpx;
  display: -webkit-box;
  max-height: 72rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.pro-box .li .cart-item .item-info .h3 .customer-service {
  display: inline-block;
  line-height: 0;
  font-size: 24rpx;
  padding: 18rpx 10rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
  background-color: #e4f1ff;
  color: #5db1ff;
}

.pro-box .li .cart-item .item-info .h3 .em {
  background-color: #ffa601;
  display: inline-block;
  line-height: 0;
  font-size: 22rpx;
  color: #fff;
  padding: 16rpx 10rpx;
  border-radius: 18rpx;
  margin-right: 8rpx;
}

.pro-box .li .cart-item .item-info .h4 {
  color: #999;
  position: absolute;
  bottom: 0;
  height: auto;
  line-height: 32rpx;
  margin-top: 0;
}

.div-space3 {
  display: inline-block;
  width: 20rpx;
  height: 10rpx;
}

.pro-box .li .cart-item .item-info .h4 .h4-view {
  font-size: 24rpx;
  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-right: 32rpx;
}

.pro-box .li .cart-item .item-info .h4 .h4-view .detail-del {
  font-size: 24rpx;
  display: inline-block;
  text-decoration: line-through;
  margin-left: 4rpx;
}

.pro-box .li .cart-item .item-info .quantity,
.pro-box .li .cart-item .item-info .price {
  position: absolute;
  bottom: 0;
}

.pro-box .li .cart-item .item-info .quantity {
  left: 0;
  bottom: -6rpx;
}

.pro-box .li .cart-item .item-info .quantity .i {
  line-height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.pro-box .li .cart-item .item-info .quantity .i:before {
  content: 'x';
  font-size: 24rpx;
  margin-right: 0;
  line-height: 1;
}

.pro-box .li .cart-item .item-info .price {
  padding-right: 32rpx;
  right: -32rpx;
  top: 0;
  left: auto;
  background-color: #fff;
  min-height: 40rpx;
  bottom: auto;
}

.pro-box .li .cart-item .item-info .price .member-tag {
  background-color: #ffa601;
  display: inline-block;
  line-height: 0;
  font-size: 22rpx;
  color: #fff;
  padding: 16rpx 10rpx;
  border-radius: 18rpx;
  margin-right: 8rpx;
}

.pro-box .li .cart-item .item-info .price.del {
  color: #999;
  text-decoration: line-through;
}

.pro-box .li .cart-item .item-info .price.del .em,
.pro-box .li .cart-item .item-info .price.del .s {
  text-decoration: line-through;
}

.pro-box .li .cart-item .item-info .price .em,
.pro-box .li .cart-item .item-info .price .s {
  display: inline-block;
}

.pro-box .li .cart-item .item-info .price .em {
  line-height: 30rpx;
  font-size: 30rpx;
}

.pro-box .li .cart-item .item-info .price .em:before {
  content: '￥';
  font-size: 24rpx;
  margin-right: 0;
  line-height: 1;
}

.pro-box .li .cart-item .item-info .price .s {
  line-height: 24rpx;
  font-size: 24rpx;
}

#apply_for_refund {
  padding: 0 0 112rpx;
}

.head-tip {
  line-height: 80rpx;
  font-size: 24rpx;
  text-align: center;
}

.head-tip .span {
  color: #ff4752;
}

.submit-reason {
  background-color: #fff;
  padding: 30rpx 32rpx;
  position: relative;
  /* border-bottom: 1rpx solid #e6e6e6;
    border-top: 1rpx solid #e6e6e6; */
  margin: 15rpx 15rpx;
  border-radius: 18rpx;
}

.submit-reason .text {
  font-size: 28rpx;
  line-height: 36rpx;
}

.submit-reason .refund-reason {
  position: absolute;
  right: 0;
  top: 0;
  padding: 0 80rpx 0 0;
}

.refund-reason-text {
  line-height: 96rpx;
  height: 96rpx;
}

.submit-reason .btn-reason-arrow {
  position: absolute;
  right: 36rpx;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  content: "";
  border-left: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  -webkit-transform: translateY(-10rpx) scaleY(1) rotateZ(-45deg);
  transform: translateY(-10rpx) scaleY(1) rotateZ(-45deg);
}

.text-cnt-box {
  padding: 32rpx 32rpx 80rpx;
  background-color: #fff;
  margin:15rpx;
  border-radius: 18rpx;
}

.text-cnt-box .text-cnt {
  position: relative;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  min-height: 220rpx;
}

.text-cnt-box .text-cnt .textarea {
  width: 100%;
  display: block;
  font-size: 24rpx;
  color: #444;
  line-height: 42rpx;
  height: 148rpx;
  overflow-y: auto;
  word-break: break-all;
}

.textarea-tip {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #999;
}

.foot-tip {
  position: fixed;
  bottom: 112rpx;
  width: 100%;
  background-color: #ededed;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.btn-summit {
  z-index: 9;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 112rpx;
  font-size: 30rpx;
  color: var(--blue);
  text-align: center;
  background-color: #fff;
  border-top: 1rpx solid #f4f4f4;
}

.pop-refund-reason {
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.pop-refund-reason .pop-cnt {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 92rpx 0 20rpx;
  max-height: 90%;
  overflow-y: auto;
}

.pop-refund-reason .btn-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  line-height: 92rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #fff;
}

.pop-refund-reason .reason-cancel {
  float: left;
  width: 132rpx;
  line-height: 80rpx;
}

.pop-refund-reason .reason-confirm {
  float: right;
  width: 132rpx;
  color: #349bf3;
  line-height: 80rpx;
}

.pop-refund-reason .ul .li {
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.pop-refund-reason .ul .li.active {
  color: var(--blue);
  line-height: 84rpx;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
}
