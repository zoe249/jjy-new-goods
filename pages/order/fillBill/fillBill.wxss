  display: inline-block;
  padding:0 10rpx;
  background-color: #F0F3F6;
  color:var(--blueLight);
  font-size:20rpx;
  line-height:32rpx;
  border-radius: 16rpx;
  margin-right:10rpx;
  position: relative;
  top:-2rpx;
}
.goods-info .h4{
  font-size: 24rpx;
  height: 32rpx;
  color:#999;
}
.goods-info .h4 .weight-toast{
  display: inline-block;
  vertical-align: text-bottom;
  width:  26rpx;
  height:  26rpx;
  margin-left:  10rpx;
}
.goods-info .p{
  font-size: 28rpx;
}
.goods-info .p .span{
  font-size: 24rpx;
  color:#999;
}
.goods-info .p .em{
  margin-left:  20rpx;
  font-size: 24rpx;
  color:#999;
}
.goodsPrice{
  font-size:  26rpx;
  right:  32rpx;
  top:  32rpx;
  color: #FF4752;
}
.is-seven-return{
  height:  56rpx;
  line-height:  56rpx;
  text-align: center;
  background:#fff9f5;
  color:#777;
  font-size: 24rpx;
}
.fadeInUp-box{
   display: none; 
  left: 0;
  top:0;
  width:100%;
  height: 100%;
  font-size: 28rpx;
  z-index: 9;
  background: rgba(0,0,0,0.6);
  opacity: 0;
  transition: all 0.3s;
}
.pos-f{
  position: fixed;
}
.fadeInUp-box.show{
  opacity: 1;
  display: block;
}
.fadeInUp-cont{
  bottom:0;
  left:0;
  width:100%;
  background: #fff;
  box-shadow: 0 0  10rpx #ccc;
}
.fadeInUp-cont .fadeInUp-title{
  text-align: center;
  padding: 32rpx;
  font-size:  32rpx;
}
.fadeInUp-cont .fadeInUp-list{
  padding: 40rpx  32rpx;
}
.fadeInUp-cont .fadeInUp-list .li{
  font-size: 28rpx;
}
.fadeInUp-cont .fadeInUp-btn{
  width: 100%;
  height: 90rpx;
  line-height:  90rpx;
  font-size:  32rpx;
  background: #FF4752;
  color: #fff;
  text-align: center;
}
.close-img{
  width: 42rpx;
  height: 40rpx;
}
.goodsPrimePrice{
  color: #999;
  font-size:24rpx;
  margin-left: 32rpx;
  text-decoration: line-through;
}
