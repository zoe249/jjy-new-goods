/* pages/order/fillBill/fillBill.wxss */
page{
  background: #fff;
}
.goods-bill .li{
  font-size:24rpx;
}
.bill-list{
  position: relative;
  padding: 32rpx;
}
.goods-img{
  position: relative;
  width: 130rpx;
  height: 130rpx;
  background: url('https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418') no-repeat center;
  background-size: 130rpx 130rpx;
}
.goods-img .img{
  width:100%;
  height:100%;
  object-fit: cover;
}
.goods-img  .div{
  position: absolute;
  left:0;
  top:0;
  display:flex;
  justify-content:center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  color:#e1e1e1;
  background:rgba(0,0,0,.6);
}
.goods-info{
  height:  130rpx;
  margin-left:  150rpx;
  margin-right:  100rpx;
}

.goods-info .h3{
  display: -webkit-box;
  height: 72rpx;
  font-size:  26rpx;
  margin-top: -6rpx;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  
}
 .goods-info .h3 .span{
  /* display: inline-block;
  line-height: 0;
  padding:  13rpx  10rpx  10rpx;
