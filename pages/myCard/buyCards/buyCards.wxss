@import '/templates/coupon/couponItem.wxss';
@import '/templates/fillgoods/fillgoods.wxss';
page{
  background: #ededed;
}
.bg-white{
  background: #fff !important;
}
.invoice-nav{
  position: relative;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
}
.invoice-nav .invoice-select-state{
  position: absolute;
  right: 32rpx;
  top:0;
}
.invoice-nav .invoice-select-state.c-color-9,
.invoice-nav .invoice-select-state.c-color{
  right: 64rpx;
}
.forword::after {
    position: absolute;
    right: 32rpx;
    top: 50%;
    width: 16rpx;
    height: 16rpx;
    content: "";
    border-left: 2rpx solid #999;
    border-bottom: 2rpx solid #999;
    -webkit-transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
    transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
}
.fill-money{
    padding:28rpx 32rpx 0 32rpx;
}
.fill-money-item{
    padding-bottom: 20rpx;
}
.fill-money-item .cls-name{
    display: inline-block;
    width: 116rpx;
    text-align-last: justify;
    text-align: justify;
}



.footer {
  position: fixed;
  display: flex;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  background: #fff;
  font-size: 28rpx;
  text-align: right;
  z-index: 2;
}

.footer.iphone-x-patcher-container {
  height: auto;
}
.footer.iphone-x-patcher-container #total_price,
.footer.iphone-x-patcher-container .settle_accounts {
  /* padding-bottom: 64rpx; */
  height: 176rpx;
}
#total_price {
  /* float: left; */
  height: 112rpx;
  text-align: left;
  padding-left: 32rpx;
  line-height: 112rpx;
  flex: 1
}

#total_money {
  display: inline-block;
  font-size: 38rpx;
  color: #FF4752;
  padding-right: 20rpx;
}

#total_money text {
  font-size: 24rpx;
}

.settle_accounts {
  flex: 1;
  /* float: right; */
  /* width: 200rpx; */
  height: 112rpx;
  line-height: 112rpx;
  font-size: 30rpx;
  background: #FF4752;
  color: #fff;
  text-align: center;
}