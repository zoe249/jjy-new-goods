page {
    background: #f5f5f5;
}

.bind-contaier {
    display: block;
    padding: 20rpx 0 100rpx;
    background: #fff;
}

.banner-img {
    width: 750rpx;
    height: 390rpx;
}

.edit-area {
    margin: 32rpx;
    padding: 12rpx 20rpx;
    border-radius: 16rpx;
    font-size: 32rpx;
    border: 1px solid #ededed;
}

.edit-area input {
    font-size: 28rpx;
}

.save {
    padding: 10rpx 32rpx 50rpx;
}

#save_btn,
.check-card-list {
    display: inline-block;
    width: 686rpx;
    height: 96rpx;
    color: #fff;
    line-height: 96rpx;
    font-size: 38rpx;
    text-align: center;
    background: #ccc;
    -webkit-border-radius: 48rpx;
    border-radius: 48rpx;
}

#save_btn.bind {
    background: #FF4752;
}

.check-card-list {
    background: #fff;
    color: #444;
}

.user_card_tips {
    margin: 50rpx auto 0;
    text-align: center;
    font-size: 24rpx;
}

.user_card_tips .p {
    color: #ccc;
}

.user_card_tips .card-img {
    width: 224rpx;
    height: 140rpx;
    margin: 26rpx auto;
}

.user_card_tips .h4 {
    color: #999;
}

.user_card_tips .h4 .img {
    top: -54rpx;
    left: 50%;
    margin-left: -10rpx;
    width: 21rpx;
    height: 45rpx;
}

.scan-btn {
    display: block;
    position: absolute;
    right: 20rpx;
    top: 50%;
    width: 40rpx;
    height: 40rpx;
    transform: translateY(-50%);
    background: url(https://shgm.jjyyx.com/m/images/icon_saoka.png) no-repeat center;
    background-size: 100%;
    z-index: 9;
}

.scan-btn::after {
    content: "";
    position: absolute;
    left: 0rpx;
    top: -10rpx;
    width: 60rpx;
    height: 60rpx;
}

.edit-area .del_btn {
    position: absolute;
    right: 76rpx;
    top: 50%;
    display: block;
    width: 30rpx;
    height: 30rpx;
    transform: translateY(-50%);
    background: url("https://shgm.jjyyx.com/m/images/del.png") no-repeat center;
    background-size: 100%;
    z-index: 2;
}

.edit-area .del_btn::after {
    content: "";
    position: absolute;
    left: -30rpx;
    top: -15rpx;
    width: 60rpx;
    height: 60rpx;
}

.edit-area .del_btn.psw {
    right: 16rpx;
}