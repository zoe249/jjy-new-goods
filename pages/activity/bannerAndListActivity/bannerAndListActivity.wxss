/* pages/activity/index/index.wxss */

.container {
    width: 100%;
    height: 100vh;
}

.activity-title {
    width: 100%;
    height: auto;
}

.activity-title .title-image {
    width: 100%;
}

.swiper-container {
    width: 100%;
    height: 120rpx;
    overflow: hidden;
    padding-left: 32rpx;
    margin: 30rpx 0;
}

.swiper-container .coupon-item-container {
    display: flex;
    align-items: center;
    width: 642rpx;
    height: 120rpx;
    background: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_item_bg.png") no-repeat center;
    background-size: contain;
    padding: 0 20rpx;
}

.swiper-container .coupon-item-container .coupon-left-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 160rpx;
}

.swiper-container .coupon-item-container .coupon-left-container .coupon-value {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    font-size: 44rpx;
    line-height: 0.8;
    color: #FFF;
}

.swiper-container .coupon-item-container .coupon-left-container .coupon-value:before {
    content: 'ï¿¥';
    display: inline;
    font-size: 24rpx;
    line-height: 1;
    color: #FFF;
}

.swiper-container .coupon-item-container .coupon-left-container .coupon-discount-value {
    font-size: 32rpx;
    line-height: 1;
    color: #FFF;
}

.swiper-container .coupon-item-container .coupon-left-container .coupon-free-shipping-value {
    font-size: 38rpx;
    line-height: 1;
    color: #FFF;
}

.swiper-container .coupon-item-container .coupon-left-container .coupon-label {
    width: 100%;
    margin-top: 16rpx;
    font-size: 22rpx;
    line-height: 1.2;
    color: #FFF;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper-container .coupon-item-container .coupon-right-container {
    flex: 1;
    margin-left: 32rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.swiper-container .coupon-item-container .coupon-right-container .coupon-desc {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    height: 52rpx;
    font-size: 22rpx;
    color: #FFF;
    line-height: 26rpx;
    overflow: hidden;
    word-wrap: break-word;
    word-break: break-all;
    -webkit-line-clamp: 2;
}

.swiper-container .coupon-item-container .coupon-right-container .coupon-title {
    max-width: 100%;
    margin-top: 8rpx;
    padding: 14rpx;
    border: 1rpx solid #FFF;
    color: #FFF;
    font-size: 20rpx;
    line-height: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper-container .coupon-item-container .coupon-btn {
    margin-left: 24rpx;
    width: 152rpx;
    height: 52rpx;
    background: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/btn_receive.png") no-repeat center;
    background-size: contain;
}

.swiper-container .coupon-item-container .coupon-btn.not-begin {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/btn_receive_not_begin.png");
}

.swiper-container .coupon-item-container .coupon-btn.end {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/btn_receive_end.png");
}

.swiper-container .coupon-item-container .coupon-btn.received {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/btn_received.png");
}

.swiper-container .coupon-item-container .coupon-btn.sold-out {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/btn_receive_sold_out.png");
}

.swiper-container .coupon-item-container.free-shipping {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_item_baoyou_bg.png");
}

.swiper-container .coupon-item-container.dis {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_item_dis_bg.png");
}

.swiper-container .coupon-item-container.free-shipping.dis {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_item_baoyou_dis_bg.png");
}

.swiper-container.one-coupon .coupon-item-container {
    width: 686rpx;
    padding-right: 40rpx;
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_one_item_bg.png");
}

.swiper-container.one-coupon .coupon-item-container.free-shipping {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_one_item_baoyou_bg.png");
}

.swiper-container.one-coupon .coupon-item-container.dis {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_one_item_dis_bg.png");
}

.swiper-container.one-coupon .coupon-item-container.free-shipping.dis {
    background-image: url("https://shgm.jjyyx.com/m/html/activity/promotion/images/coupon_one_item_baoyou_dis_bg.png");
}

.nav-seat-container {
    position: relative;
    display: block;
    width: 100%;
    height: 90rpx;
    overflow: hidden;
    overflow-x: auto;
    padding: 0 8rpx;
}

.nav-seat-container.no-height {
    height: 0;
}

.nav-container {
    display: block;
    width: 100%;
    height: 90rpx;
    padding: 0 8rpx;
    background: #FFF;
    border-bottom: 1rpx solid #ededed;
}

.nav-list-container {
    height: 90rpx;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    color: #444;
    padding: 0 16rpx;
}

.nav-container.fixed_class {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}

.nav-list-container .nav-item {
    flex: none;
    padding: 10rpx 24rpx;
    font-size: 28rpx;
    line-height: 1;
    margin-left: 20rpx;
    background: transparent;
    color: #444;
    border-radius: 24rpx;
}

.nav-list-container .nav-item:first-child {
    margin-left: 0;
}

.nav-list-container .nav-item.active {
    background: #FF4752;
    color: #FFF;
}

.module-goods-list .goods-list-container {
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 16rpx;
}

.module-header-image {
    width: 100%;
}

.module-image {
    width: 100%;
    height: auto;
}

.pic-module-container {
    width: 100%;
    display: flex;
    padding: 32rpx 20rpx;
}

.pic-module-container .pic-item {
    flex: 1;
    margin-left: 25rpx;
}

.pic-module-container .pic-item:first-child {
    margin-left: 0;
}

.pic-module-container .pic-item .pic {
    width: 100%;
    height: auto;
}

.bottom-link {
    width: 100%;
    margin-top: 8rpx;
}
.goods-normal-item{
    margin: 0 16rpx;
    border-radius: 16rpx;
    overflow: hidden;
}