}
.nav-seat-container{
  position: relative;
  display: block;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  overflow-x: auto;
  padding: 0 8rpx;
}

.nav-seat-container.no-height{
  height: 0;

}

.nav-container{
  display: block;
  width: 100%;
  height: 90rpx;
  padding: 0 8rpx;
  background: #FFEDCB;
  border-bottom: 1rpx solid #ededed;
}

.nav-list-container{
  height: 90rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  color: #BE9B56;
  padding: 0 16rpx;
}

.nav-container.fixed_class{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.nav-list-container .nav-item{
  flex: none;
  padding: 10rpx 24rpx;
  font-size: 28rpx;
  line-height: 1;
  margin-left: 20rpx;
  background: transparent;
  color: #BE9B56;
  border-radius: 24rpx;
}

.nav-list-container .nav-item:first-child{
  margin-left: 0;
}

.nav-list-container .nav-item.active{
  color: #9A6F19;
}

.module-goods-list .goods-list-container{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 16rpx;
}

.module-goods-list .goods-list-container .goods-item{
  margin-left: 16rpx;
}

.module-header-image{
  width: 100%;
}

.bottom-link{
  width: 100%;
  margin-top: 8rpx;
}
.invitation_content_intro{
  position: absolute;
  left: 0;
  top:106rpx;
  width: 100%;
}