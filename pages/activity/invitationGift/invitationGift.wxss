.coupon-container .receive-btn{
  width: 240rpx;
  height: 80rpx;
  margin: 80rpx auto 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  background: url("https://shgm.jjyyx.com/m/html/activity/shareGift/images/btn_submit_click.png") no-repeat center;
  background-size: 240rpx;
  overflow: hidden;
}

.coupon-container .receive-btn .text {
  font-size: 34rpx;
  color: #B98C3D;
  line-height: 1;
  font-weight: bold;
  letter-spacing:4rpx;
}

/** 无商品默认图 */
