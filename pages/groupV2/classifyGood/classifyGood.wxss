/* pages/goods/classifyScreen/classifyScreen.wxss */
.container {
	height: 100vh;
}

.iphonex-padding {
	height: 68rpx;
}

.head-box {
	position: fixed;
	z-index: 99;
	top: 0;
	left: 0;
	width: 100%;
	height: 160rpx;
	background-color: #fff;
	/* box-shadow:0rpx 4rpx 4rpx rgba(206,206,206,0.2); */
}

.head-box .firstBox {
	height: 160rpx;
	white-space: nowrap;
	width: 640rpx;
}

.head-box .firstBox .item {
	display: inline-block;
	text-align: center;
	width: 144rpx;
	padding: 32rpx 0 0;
}

.head-box .firstBox .item image {
	width: 80rpx;
	height: 80rpx;
	margin: 0 auto;
	border-radius: 50%;
}

.head-box .firstBox .item .text {
	text-align: center;
	padding: 7rpx 0 0;
	color: #818181;
	font-size: 20rpx;
	line-height: 30rpx;
}

.head-box .firstBox .item.on .text {
	color: var(--blue);
}

.head-box .search {
	position: absolute;
	right: 0;
	top: 0;
	height: 160rpx;
	width: 110rpx;
	text-align: center;
	font-size: 21rpx;
	color: #373737;
	padding: 112rpx 0 0;
	line-height: 48rpx;
	background: url("https://shgm.jjyyx.com/m/images/class-search.png") no-repeat center 32rpx;
	background-size: 80rpx auto;

}

.ul-no-data {
	text-align: center;
	padding: 30% 0 0;
}

.ul-no-data image {
	display: block;
	width: 200rpx;
	margin: 0 auto;
}

.ul-no-data .text {
	padding: 20rpx 0 0;
	line-height: 32rpx;
	font-size: 24rpx;
}

.wrapper {
	height: 100vh;
}

.cart-ico {
	position: fixed;
	z-index: 99;
	bottom: 50rpx;
	right: 37rpx;
	width: 114rpx;
	height: 114rpx;
	background: url("https://shgm.jjyyx.com/m/images/icon-fixed-cart.png") center no-repeat;
	background-size: 100%;
}

.cart-ico .cart-num {
	position: absolute;
	right: 0;
	top: 0;
	padding: 0 10rpx;
	border-radius: 16rpx;
	color: #fff;
	font-size: 24rpx;
	line-height: 32rpx;
	background-color: #CF2231;
}

