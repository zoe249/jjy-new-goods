.choice-address-result .ul {
  padding-left: 32rpx;
}

.choice-address-result .ul .li {
  width: 100%;
}

.choice-address-result .ul .li.cur:after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  width: 32rpx;
  height: 32rpx;
  margin-top: -16rpx;
  background: url(https://shgm.jjyyx.com/m/images/icon_check_active.png) no-repeat center;
  -webkit-background-size: 32rpx;
  background-size: 32rpx;
}

.choice-address-result .ul .li .a {
  display: block;
  padding: 24rpx 32rpx 24rpx 0;
}

.choice-address-result .ul .li .a .em {
  line-height: 44rpx;
  font-size: 28rpx;
}

.choice-address-result .ul .li .a .p {
  line-height: 36rpx;
  font-size: 24rpx;
  color: var(--gray);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.seach_scroll{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  padding-top: 120rpx;
  background: #fff;
  z-index: 9;
}
.search_shop{
  border-bottom: 1px solid #E7E7E7;
  padding: 20rpx 30rpx;
  line-height: 44rpx;
  font-size: 28rpx;
}
.search_shop_dec{
  line-height: 36rpx;
  font-size: 24rpx;
  color: var(--gray);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.error{
  background: transparent;
}
.error .img {
    display: block;
    width: 400rpx;
    height: 400rpx;
    margin: 244rpx auto 0;
}

.error .p {
    margin: 0 24rpx;
    color: #808080;
    font-size: 30rpx;
    text-align: center;
}