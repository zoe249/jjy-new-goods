
.store-activity-list-container {
	width: 100%;
	padding: 0 1rem 3.4375rem 1rem
}

.store-activity-list-container .store-activity-item-container {
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: end;
	-ms-flex-align: end;
	align-items: flex-end;
	width: 100%;
	height: 11.875rem;
	overflow: hidden;
	margin-top: 1.25rem;
	background: no-repeat center;
	background-size: cover;
	border: 1px solid #ededed;
	border-radius: .3125rem
}

.store-activity-list-container .store-activity-item-container .activity-msg-container {
	width: 100%;
	height: 2.5rem;
	background: rgba(255,255,255,0.8);
	padding: 0 .625rem;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
	overflow: hidden
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .activity-name {
	-webkit-box-flex: 1;
	-ms-flex: 1;
	flex: 1;
	font-size: .9375rem;
	line-height: 1;
	color: #464646;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	text-overflow: ellipsis;
	white-space: nowrap
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .price-container {
	-webkit-box-flex: 0;
	-ms-flex: none;
	flex: none;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: end;
	-ms-flex-align: end;
	align-items: flex-end;
	color: #ff5d3d
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .price-container .small-font {
	font-size: .75rem;
	line-height: 1
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .price-container .middle-font {
	font-size: .9375rem;
	line-height: 1
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .price-container .big-font {
	font-size: 1.1875rem;
	line-height: 0.9
}

.store-activity-list-container .store-activity-item-container .activity-msg-container .price-container .over-font {
	font-size: .9375rem;
	line-height: 1;
	color: #999
}

.store-activity-list-container.history-container {
	padding: 2.1875rem 1rem 0 1rem
}

.look-other-activity-container {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 3.4375rem;
	background: #FFF;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center
}

.look-other-activity-container .other-btn {
	font-size: .875rem;
	line-height: 1;
	color: #999
}

.look-other-activity-container .other-btn:after {
	content: '';
	margin-left: .625rem;
	display: inline-block;
	width: .625rem;
	height: .625rem;
	border-left: 1px solid #999;
	border-top: 1px solid #999;
	-webkit-transform-origin: center center;
	-ms-transform-origin: center center;
	transform-origin: center center;
	-webkit-transform: translate(0, 50%) rotate(45deg);
	-ms-transform: translate(0, 50%) rotate(45deg);
	transform: translate(0, 50%) rotate(45deg)
}

.look-other-activity-container.position {
	bottom: auto;
	top: 0
}

.look-other-activity-container.position .other-btn:after {
	-webkit-transform: translate(0, -50%) rotate(-135deg);
	-ms-transform: translate(0, -50%) rotate(-135deg);
	transform: translate(0, -50%) rotate(-135deg)
}
