.shop-head{
    width: 686rpx;
    margin: 16rpx auto 0;
    background: #fff;
    border-radius: 24rpx;
    padding: 0 16rpx;
}
.shop-head-top{
    border-bottom: 1px solid #F3F3F4;
    padding: 32rpx 0;
    display: flex;
    align-items: center;
    position: relative;
}
.shop-img{
    width: 112rpx;
    height: 112rpx;
    background: #f4f4f4;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 32rpx;
}
.shop-img image{
    width: 100%;
}
.shop-name{
    font-size: 30rpx;
    color: #313031;
}
.shop-head-bot{
    color: #9E9EA6;
    font-size: 24rpx;
    padding: 16rpx;
    line-height: 1.4;
}

.shop-tell{
    width: 96rpx;
    height: 80rpx;
    background: #E7EEF5;
    opacity: 1;
    border-radius: 40rpx 0px 0px 40rpx;
    position: absolute;
    right: -16rpx;
    top: 0;
    bottom: 0;
    margin: auto;
    padding: 16rpx;
    
}
.shop-tell view{
    width: 48rpx;
    height: 48rpx;
    font-size: 48rpx;
    color: #155C99;
    display: flex;
    align-items: center;
}