.nav-scroll-container .nav-container {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.nav-scroll-container .nav-container .nav-item {
    line-height: 0;
    padding: 43rpx 24rpx;
    text-align: center;
    margin-left: 40rpx;
    flex: none;
}

.nav-scroll-container .nav-container .nav-item:first-child {
    margin-left: 0;
}

.nav-scroll-container .nav-container .active {
    color: #155C99;
    /* background: url('https://shgm.jjyyx.com/m/images/icon_nav_active.png') no-repeat bottom;
