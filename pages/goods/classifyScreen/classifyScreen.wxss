/* pages/goods/classifyScreen/classifyScreen.wxss */

.wrapper {
    height: 100vh;
}

.dialog-bg {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 998;
}

.top-fixed-nav-container {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    background: #fff;
}

.top-fixed-nav-container .catalog {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #444;
}

.top-fixed-nav-container .catalog text {
    padding-right: 40rpx;
    background: url('https://shgm.jjyyx.com/m/images/arrow_down.png') right center no-repeat;
    background-size: 20rpx;
}

.top-fixed-nav-container .catalog.active text {
    background-image: url('https://shgm.jjyyx.com/m/images/arrow_up_active.png');
}

.catalog-container {
    position: absolute;
    left: 0;
    top: 100rpx;
    width: 750rpx;
    border-top: 2rpx solid #ededed;
    background: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.catalog-container .catalog-item {
    width: 250rpx;
    height: 100rpx;
    text-align: center;
    line-height: 0;
    padding: 50rpx 0;
    font-size: 28rpx;
    border-right: 2rpx solid #ededed;
    border-bottom: 2rpx solid #ededed;
}

.catalog-container .catalog-item text {
    position: relative;
}

.catalog-container .catalog-item.active text:before {
    position: absolute;
    top: 50%;
    left: -20rpx;
    margin-top: -4rpx;
    content: '';
    width: 8rpx;
    height: 8rpx;
    font-size: 0;
    border-radius: 50%;
    background-color: #ff5c33;
}

.catalog-container .catalog-item.no-border-right {
    border-right: none;
}

.top-fixed-nav-container .filter-sales {
    font-size: 28rpx;
    margin-right: 50rpx;
    padding-right: 40rpx;
    background: url('https://shgm.jjyyx.com/m/images/icon_sales.png') right center no-repeat;
    background-size: 20rpx;
}

.top-fixed-nav-container .filter-sales.up {
    background-image: url('https://shgm.jjyyx.com/m/images/icon_sales_up.png');
}

.top-fixed-nav-container .filter-sales.down {
    background-image: url('https://shgm.jjyyx.com/m/images/icon_sales_down.png');
}

.top-fixed-nav-container .filter-btn {
    font-size: 28rpx;
    margin-right: 50rpx;
    padding-right: 40rpx;
    background: url('https://shgm.jjyyx.com/m/images/nav_choose.png') right center no-repeat;
    background-size: 20rpx;
}

.top-fixed-nav-container .filter-btn.active {
    background-image: url('https://shgm.jjyyx.com/m/images/nav_choose_on.png');
}

.filter-container {
    position: absolute;
    left: 0;
    top: 100rpx;
    width: 750rpx;
    background: #fff;
}

.filter-container .filter-item-container {
    margin: 38rpx 32rpx 0;
    font-size: 28rpx;
}

.filter-container .filter-item-title {
    padding: 48rpx 0;
    line-height: 0;
    color: #999;
}

.filter-container .filter-item-btn-container {
    display: flex;
    align-items: center;
}

.filter-container .filter-item-btn {
    width: 210rpx;
    height: 64rpx;
    margin-right: 28rpx;
    border: 2rpx solid #ededed;
    border-radius: 32rpx;
    text-align: center;
    line-height: 0;
    padding: 32rpx 0;
    color: #444;
}

.filter-container .filter-item-btn.active {
    color: #ff5c33;
    border: 2rpx solid #ff5c33;
}

.filter-container .filter-submit-btn {
    width: 320rpx;
    height: 72rpx;
    margin: 104rpx auto 40rpx;
    padding: 36rpx;
    line-height: 0;
    border-radius: 36rpx;
    background: #ff5c33;
    color: #fff;
    text-align: center;
}

.content {
    padding-top: 100rpx;
    min-height: 100vh;
}

.second-cate-scroller {
    background: #f5f5f5;
}

.second-cate-container {
    display: flex;
}

.second-cate-container .second-cate-item {
    width: 160rpx;
    padding: 20rpx 0;
    flex-shrink: 0;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #444;
}

.second-cate-container .second-cate-item.active {
    color: #ff5c33;
    background: url('https://shgm.jjyyx.com/m/images/ico_secondCate_active.png') no-repeat bottom;
    background-size: 104rpx 4rpx;
}

.second-cate-container .second-cate-item-icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-bottom: 10rpx;
}

.goods-list-container {
    position: relative;
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
    width: 720rpx;
    margin: 16rpx auto;
    border-radius: 16rpx;
    overflow: hidden;
}

.goods-list-container::before {
    content: "";
    position: absolute;
    left: 50%;
    top: 0;
    width: 2rpx;
    height: 100%;
    background: #ededed;
    z-index: 2;
}


/*占位用*/

.seat-container {
    display: block;
    width: 100%;
    height: 60rpx;
}