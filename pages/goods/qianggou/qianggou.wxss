/* pages/goods/qianggou/qianggou.wxss */

.wrapper {
    width: 100%;
    height: 100vh;
}

.content {
    min-height: 100vh;
}

.header-container {
    position: sticky;
    top: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: stretch;
    border-bottom: 1rpx solid #e7e7e7;
    border-top: 1rpx solid #e7e7e7;
    background: #fff;
    z-index: 2;
}

.header-container .nav-item {
    position: relative;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bold;
}

.header-container .nav-item text {
    color: #94969c;
    font-size: 30rpx;
    line-height: 1;
}

.header-container .nav-item.active::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 16rpx;
    width: 48rpx;
    height: 5rpx;
    background: #FF4752;
    transform: translateX(-50%);
    border-radius: 5rpx;
    /* background: url("https://shgm.jjyyx.com/m/images/ico_secondCate_active.png") no-repeat bottom center;
  background-size: 208rpx 4rpx; */
}

.header-container .nav-item.active text {
    color: var(--blue);
}

.qianggou-msg-container {
    width: 100%;
    padding: 32rpx;
    display: flex;
    align-items: center;
    font-size: 24rpx;
    background: #fff;
}

.qianggou-msg-container .msg {
    flex: 1;
    /* font-size: 26rpx; */
    color: #444;
    line-height: 1;
}

.qianggou-msg-container .limit-time-msg {
    /* font-size: 26rpx; */
    font-size: 24rpx;
    line-height: 1;
    color: #999;
}

.limit-time-container {
    margin-left: 20rpx;
}

.limit-time-container .time {
    display: inline-block;
    color: #fff;
    font-size: 24rpx;
    line-height: 1;
    padding: 4rpx;
    background: var(--blue);
    border-radius: 5rpx;
    text-align: center;
}

.limit-time-container .division {
    margin: 0 6rpx;
    color: #777;
    font-size: 24rpx;
    line-height: 1;
}

.goods-list-container {
    margin: 16rpx;
    background: #fff;
    border-radius: 16rpx;
}