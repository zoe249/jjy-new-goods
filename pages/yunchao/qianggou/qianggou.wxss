page,scroll-view {
  background: #f8f8f8;
}

.activity-head {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
  padding: 16rpx;
  /* border-top: 1rpx solid #e7e7e7; */
  border-bottom: 2rpx solid #DCDEE2;
  background: #fff;
}

.share-goods-container {
  /* padding: 14rpx; *//* background: #fff; */
}

.market-nav {
  position: sticky;
  top: 0;
  left: 0;
  display: flex;
  text-align: center;
  background: #fff;
}

.market-nav .market-nav-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  height: 64rpx;
  color: #DCDEE2;
}

.market-nav .market-nav-item text {
  position: relative;
  padding: 14rpx 0;
}

.market-nav .market-nav-item.active text {
  color: #FF2D63;
}

.market-nav .market-nav-item.active text::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 48rpx;
  height: 5rpx;
  background: #FF2D63;
  transform: translateX(-50%);
  border-radius: 3rpx;
}

.proGoodsList {
  padding-top: 94rpx;
}

.activity-time-wrap {
  z-index: 2;
  display: flex;
  font-size: 24rpx;
  padding: 32rpx;
  justify-content: space-between;
  background: #fff;
  color: #6E6D79;
}

.activity-time {
  display: flex;
  color: #6E6D79;
}

.activity-time .timer {
  color: #FF2D63;
}

.activity-time .timer text {
  display: inline-block;
  height: 32rpx;
  line-height: 32rpx;
  min-width: 32rpx;
  background: #FF2D63;
  color: #fff;
  margin: 0 4rpx;
  padding: 0 4rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 16rpx;
}

.proGoodsList {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: none;
}

.soonGoodsList {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  padding-top: 94rpx;
  display: none;
}

.soonGoodsList.show-box, .proGoodsList.show-box {
  display: block;
}

.share-goods-list {
  width: 688rpx;
  margin: 0 auto;
  /* padding: 0 16rpx; */
}

.share-goods-list .goods-item {
  display: flex;
  padding: 32rpx 16rpx;
  position: relative;
  background: #fff;
  margin-top: 32rpx;
  border-radius: 24rpx;
}

.share-goods-list .goods-item::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 2rpx;
  width: 656rpx;
  transform: translateX(-50%);
  background: #F3F3F4;
}

.share-goods-list .goods-item.g-list::after {
  content: "";
  bottom: 0;
  height: 0;
}

.share-goods-list .goods-img {
  width: 240rpx;
}

.share-goods-list .goods-item image {
  width: 208rpx;
  height: 208rpx;
  background: url('https://shgm.jjyyx.com/m/images/icon-default.png') no-repeat center;
  background-size: 208rpx;
}

.share-goods-list .goods-info {
  flex: 1;
  position: relative;
  padding-top: 16rpx;
}

.share-goods-list .goods-info .stock-state {
  width: 224rpx;
  color: #FF2D63;
  font-size: 20rpx;
  font-weight: 300;
  margin-top: 18rpx;
}

.share-goods-list .goods-info .progress {
  position: relative;
  height: 10rpx;
  border-radius: 5rpx;
  box-sizing: border-box;
  background: #F3F3F4;
}

.share-goods-list .goods-info .progressing {
  position: absolute;
  left: -1rpx;
  top: -1rpx;
  background: #FF2D63;
  height: 10rpx;
  border-radius: 5rpx;
}

.buyers-number {
  position: absolute;
  right: 0;
  bottom: 52rpx;
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #9E9EA6;
}

.need-buy {
  position: absolute;
  left: 0;
  bottom: 4rpx;
  display: flex;
  color: #6E6D79;
  font-size: 20rpx;
}

.need-buy .goods-prime-price {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 36rpx;
  color: #FF2D63;
  margin-left: 28rpx;
}

.share-goods-list .goods-title {
  width: 419rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #0C0C21;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-dec {
  width: 260rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #9E9EA6;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-type {
  width: 64rpx;
  height: 32rpx;
  margin-top: 15rpx;
  border: 1rpx solid rgba(237, 237, 237, 1);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #FF2D63;
  text-align: center;
}

.share-goods-list .goods-price {
  display: flex;
  margin-top: 16rpx;
}

.share-goods-list .goods-price .p-price {
  height: 42rpx;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 36rpx;
  color: #9E9EA6;
  margin-right: 32rpx;
}

.share-goods-list .goods-price .p-price text {
  font-size: 30rpx;
  color: #FF2D63;
}

.share-goods-list .goods-price .o-price {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 300;
  line-height: 36rpx;
  color: #9E9EA6;
}

.share-goods-list .goods-price .o-price text {
  display: inline-block;
  position: relative;
  padding: 0 10rpx;
  text-decoration: line-through;
}

