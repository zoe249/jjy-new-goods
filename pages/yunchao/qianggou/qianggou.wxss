.share-goods-list .join {
  position: absolute;
  right: 0;
  bottom: 0rpx;
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #FF2D63;
  color: #fff;
  font-size: 24rpx;
  padding: 0;
  border: 0;
  border-radius: 48rpx;
}

.share-goods-list .join.soon, .not-stock .join {
  background: var(--bgGrayWhite);
  color: var(--gray);
  border: 1rpx solid var(--bgGrayWhite);
}

.share-goods-list .join::after {
  border: 0;
}

.banner-img {
  width: 688rpx;
  height: 304rpx;
  margin: 0 auto;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner {
  position: relative;
  padding-top: 32rpx;
}

.banner .dic {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 64rpx;
  height: 36rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  background: rgba(0, 0, 0, 1);
  opacity: 0.4;
  border-radius: 32rpx;
  letter-spacing: 4rpx;
}

.banner swiper {
  height: 304rpx;
}

.banner swiper-item {
  box-sizing: border-box;
  /* padding: 16rpx 16rpx 0 16rpx; */
}

.join-group-model {
  position: relative;
}

.join-group-model .join-group {
  height: 28px;
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #9E9EA6;
  padding: 16rpx 0;
  border-top: 1rpx solid #ededed;
}

.join-group-user {
  display: flex;
  align-items: center;
  padding-bottom: 32rpx;
  padding-top: 4rpx;
}

.join-group-user image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  border-radius: 48rpx;
  background: url(https://shgm.jjyyx.com/m/images/icon_d_head.png) no-repeat center;
  background-size: 48rpx;
}

.df-img {
  border: 1rpx dashed #777;
}

.join-group-need-user {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #0C0C21;
  margin-left: 16rpx;
}

.join-group-need-user text {
  color: #FF2D63;
}

.join-group-btn {
  position: absolute;
  right: 0;
  bottom: 32rpx;
  width: 127rpx;
  height: 48rpx;
  color: #FF2D63;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 48rpx;
  text-align: center;
  background: #FFE8EE;
  border-radius: 48rpx;
}
.tuanProGoodsList{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}