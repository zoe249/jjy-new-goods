  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.down-info{
  position: absolute;
  left: 98rpx;
  top: 50%;
  right: 98rpx;
  transform: translateY(-50%);
  z-index: 1;
}

.down-img-btn{
  width: 432rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF2D63;
  box-shadow: 0 0 5rpx var(--darkGray);
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  margin: 96rpx auto 0;
}