.begin {
  position: relative;
  height: 50rpx;
  padding-top: 17rpx;
  text-align: center;
  background: #fff;
}

.begin text {
  display: inline-block;
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #313031;
  padding: 0 20rpx;
  letter-spacing: 5rpx;
  background: #fff;
}

.begin::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 13rpx;
  width: 100%;
  border-bottom: 1rpx solid #e7e7e7;
  z-index: -1;
}

.swiper-group {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100%;
  padding: 176rpx 0 90rpx;
  background: #fff;
}

.swiper-group swiper-item, .swiper-group scroll-view {
  height: 100%;
}

.mod-scroll {
  height: 100vh;
}

.header-container {
  position: relative;
  width: 100%;
  height: auto;
}

.header-container .header-image {
  width: 100%;
  height: auto;
}

.header-container .swiper-container .swiper-image {
  width: 100%;
  height: 390rpx;
}

.group-empty-container {
  margin-top: 16rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: #fff;
}

.group-empty-container .empty-icon {
  width: 344rpx;
  height: 241rpx;
}

.group-empty-container .empty-msg {
  margin-top: 60rpx;
  line-height: 1;
  color: #999;
  font-size: 32rpx;
}

.extension-model {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.extension-model.showExtension {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.extension-share-info {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 368rpx;
  width: 100%;
  background: #fff;
}

.gods-info {
  display: flex;
  padding: 48rpx 32rpx;
}

.gods-info image {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #e7e7e7;
  background: url("https://shgm.jjyyx.com/m/images/detail_goods_b.png") no-repeat center;
  background-size: 160rpx;
}

.gods-dec {
  flex: 1;
  padding-left: 30rpx;
}

.gods-title {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #313031;
}

.gods-i {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #94969c;
}

.gods-share {
  height: 112px;
  line-height: 112rpx;
  color: #fff;
  font-size: 30rpx;
  background: #ff2d63;
  border-radius: 0;
}

.gods-share::after {
  border: 0;
}

.footer-container {
  opacity: 0.3;
}


.share-canvas {
  position: absolute;
  left: 0;
  top: -999999999rpx;
  width: 1500rpx;
  height: 2668rpx;
  z-index: -9;
  opacity: 0;
  transform: translate3d(0, 0, -1000rpx);
}


.shareHomePage {
  position: fixed;
  left: 32rpx;
  bottom: 206rpx;
  width: 96rpx;
  height: 96rpx;
  transition: all 0.3s;
}

.shareHomePage button {
  position: absolute;
  left: 0;
  top: 0;
  background: transparent url(http://m.lyzlcloud.com/m/images/icon_share_home.png) no-repeat center;
  background-size: cover;
  width: 96rpx;
  height: 96rpx;
  border: none;
  outline: none;
}
.shareHomePage button::after{
  border: 0;
}
.shareHomePage image {
  width: 96rpx;
  height: 96rpx;
}

.share-sheet-pupop{
  display: flex;
  align-items: center;
  background: var(--bgGray);
  padding: 48rpx 0 32rpx;
}
.share-sheet-item{
  flex: 1;
  font-size: 24rpx;
  color: var(--darkGray);
  background: transparent;
  outline: none;
}
.share-sheet-item::after{
  border: none;
}
.share-sheet-pupop text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 68rpx;
  width: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #04DF71 0%, #03C35E 100%);
  color: var(--white);
  margin: 0 auto;
}
.share-sheet-item view{
  margin-top: 16rpx;
  line-height: 1;
}
.share-sheet-cancel{
  height: 112rpx;
  line-height: 112rpx;
  font-size: 30rpx;
  background: #ffffff;
}
.down-loacl-page{
