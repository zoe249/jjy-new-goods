page {
  background: #f4f4f4;
}

.header {
  display: flex;
  width: 100%;
  padding: 16rpx 16rpx 16rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #e7e7e7;
}

.shop-info {
  display: flex;
  flex: 1;
  align-items: center;
}

.shop-info image {
  width: 64rpx;
  height: 64rpx;
  background: url("https://shgm.jjyyx.com/m/images/custorm_photo.jpg?t=41801") no-repeat center;
  background-size: 64rpx;
  margin-right: 16rpx;
  border-radius: 32rpx;
}

.shop-extract-area {
  display: inline-block;
  position: relative;
}

.shop-extract-area view {
  max-width: 580rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 32rpx;
  height: 32rpx;
  color: #777;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-forword {
  display: inline-block;
  position: absolute;
  right: -32rpx;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  border-left: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  -webkit-transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
  transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
}

.self-cancellation {
  font-size: 24rpx;
  color: #777;
  background: #fff;
  padding: 32rpx 32rpx 0 32rpx;
}

.address {
  border-bottom: 1rpx solid #e7e7e7;
}

.consignee {
  font-size: 30rpx;
}

.address-info {
  padding: 22rpx 0 30rpx;
}

.goods-tatol-num {
  height: 80rpx;
  line-height: 80rpx;
}

.order-num {
  height: 80rpx;
  line-height: 80rpx;
  padding-top: 8rpx;
  color: var(--blue);
  font-size: 24rpx;
  font-weight: bold;
}

.batch-list-container {
  padding-bottom: 130rpx;
}

.order-item {
  margin: 16rpx;
  background: #fff;
  padding: 0 32rpx 16rpx;
  border-radius: 16rpx;
}

.order-item.hide {
  display: none;
}

.goods-list {
  display: flex;
  position: relative;
  padding: 16rpx 0;
}

.hr-b {
  border-bottom: 1rpx solid #e7e7e7;
}

.goods-list:last-child {
  border: 0;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #e7e7e7;
  background: url(https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418) no-repeat center;
  background-size: 160rpx;
}

.goods-info {
  flex: 1;
  position: relative;
  padding-left: 32rpx;
  color: #94969c;
  font-size: 24rpx;
}

.goods-info .goods-name {
  font-size: 24rpx;
  color: #313031;
}

.goods-spec {
  margin-top: 14rpx;
  color: #94969c;
  font-size: 22rpx;
}

.goods-spec-txt {
  margin-right: 30rpx;
}

.goods-spec .gs-price text {
  color: #FF4752;
}

.goods-price {
  position: absolute;
  bottom: 0;
  left: 32rpx;
  word-break: break-all; 
  line-height: 1.1;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  padding-right: 140rpx;
}

.goods-num {
  position: absolute;
  right: 0;
  bottom: 16rpx;
  font-size: 24rpx;
  color: #313031;
  font-weight: bold;
}

.check-box {
  position: relative;
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  background: url("https://shgm.jjyyx.com/m/images/group/icon_u_sel.png") no-repeat center;
  background-size: 30rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}

.check-box.check {
  background: url("https://shgm.jjyyx.com/m/images/group/icon_sel.png") no-repeat center;
  background-size: 30rpx;
}

.footer {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  min-height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
  color: #777;
  background: #fff;
  border-top:1rpx solid #f4f4f4;
  padding-bottom: env(safe-area-inset-bottom);
}

.select {
  width: 208rpx;
  border-right: 1rpx solid #e7e7e7;
}

.create {
  flex: 1;
}

.jiange {
  height: 16rpx;
}
.difference-wrap{
  font-size: 28rpx;
}

.difference-wrap .diff-conter{
  padding: 56rpx 48rpx 48rpx;
}
.difference-wrap .diff-footer{
  display: flex;
  line-height: 96rpx;
  text-align: center;
}
.difference-wrap .diff-footer view{
  flex: 1;
}
.difference-wrap .diff-footer .diff-btt-back{
  color: var(--red);
}

.goods-spec .property-out-hiding{
  width: 500rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}