/* pages/groupManage/reportDiff/reportDiff.wxss */
.batch-id{
  padding: 32rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.diff-item{
  position: relative;
  width: 686rpx;
  border-radius: 16rpx;
  margin: 32rpx auto 0;
  background: #fff;
  padding: 32rpx 16rpx;
  font-size: 22rpx;
  color: var(--gray);
}
.diff-item-top{
  display: flex;
}
.diff-item-img{
  width: 145rpx;
  height: 145rpx;
}
.diff-item-img image{
  width: 100%;
  height: 100%;
  background: var(--bgGrayWhiteLight);
}
.diff-item-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 145rpx;
  padding-left: 32rpx;
  margin-right: auto;
  flex: 1;
  font-size: 22rpx;
}
.diff-goods-bt .diff-spc text{
  margin-right: 32rpx;
}
.diff-goods-name{
  font-size: 24rpx;
  color: var(--black);
  display: -webkit-box !important;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
.diff-state{
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: 1rpx solid var(--red);
  right: 32rpx;
  bottom: 32rpx;
  color: var(--red);
  text-align: center;
  font-size: 24rpx;
  border-radius: 24rpx;
}
.diff-stated{
  border: 1rpx solid var(--gray);
  color: var(--gray);
}

.diff-goods-bt .property-out-hiding{
  width: 500rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}