page {
  background-color: #f4f4f4;
}
.bg-ccc{
  background-color: #ccc !important; 
}
.money-box {
  padding: 64rpx 46rpx;
}

.money-cnt {
  padding: 32rpx;
  background-color: #fff;
}

.money-cnt .head {
  padding: 0 0 32rpx;
  color: #313031;
  font-size: 24rpx;
  line-height: 72rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.money-cnt .head .span {
  display: inline-block;
  color: var(--blue);
  font-size: 40rpx;
}

.money-cnt .text1 {
  padding: 30rpx 0 0;
  font-size: 24rpx;
  color: #313031;
  line-height: 32rpx;
}

.input-box {
  border-bottom: 1rpx solid #e7e7e7;
  font-size: 40rpx;
  color: var(--blue);
  line-height: 100rpx;
  position: relative;
}

.input-cnt {
  display: block;
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 100%;
}

.input-cnt input {
  display: block;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 32rpx;
  width: 100%;
  color: #313031;
}

.rule {
  color: #94969c;
  font-size: 24rpx;
  padding: 30rpx 0 40rpx;
}

.rule .rule-li {
  position: relative;
  line-height: 32rpx;
  padding: 10rpx 0 10rpx 40rpx;
}

.rule .rule-li .num {
  position: absolute;
  left: 0;
  top: 10rpx;
  line-height: 28rpx;
  height: 30rpx;
  border: 1rpx solid #94969c;
  border-radius: 15rpx;
  width: 30rpx;
  text-align: center;
}

.get-btn {
  line-height: 112rpx;
  text-align: center;
  background-color: #cbad7e;
  color: #fff;
  font-size: 30rpx;
}
