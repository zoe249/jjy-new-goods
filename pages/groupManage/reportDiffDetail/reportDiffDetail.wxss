.upload-text {
  background-color: #fff;
  float: left;
  height: 160rpx;
  line-height: 160rpx;
  margin: 0 0 32rpx 0;
  padding: 0 0 0 20rpx;
  font-size: 28rpx;
  color: #4e4e4e;
}
.upload-btn {
  width: 160rpx;
  height: 160rpx;
  float: left;
  margin: 0 0 32rpx 0;
  background: url("https://shgm.jjyyx.com/m/images/upload_img.png") no-repeat center;
  -webkit-background-size: 100%;
  background-size: 100%;
}
.clearfix {
  zoom: 1;
  overflow: auto;
}
 .upload-img {
  border-bottom: 1rpx solid #ededed;
  padding: 32rpx 16rpx 0 16rpx;
  box-sizing: content-box;
}

 .upload-img .images {
  float: left;
}

 .upload-img .li {
  float: left;
  position: relative;
  padding: 0 15rpx 32rpx 0;
}
 .upload-img .li:nth-child(2) {
  float: left;
  position: relative;
  padding: 0 15rpx 32rpx 15rpx;
}

 .upload-img .li:nth-child(4),
 .upload-img .li:nth-child(8) {
  padding: 0 0 32rpx 0;
}

.upload-img .del-img {
  position: absolute;
  top: -16rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: url("https://shgm.jjyyx.com/m/images/ico_upload_close.png") no-repeat center;
  -webkit-background-size: 100%;
  background-size: 100%;
}

 .upload-img image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  object-fit: cover;
  background: url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat center;
  background-size: 100% 100%;
}
.span {
  float: left;
  padding: 0 0 0 20rpx;
  font-size: 28rpx;
}
.canvas
{
  width: 100vw;
    height: 100vh;
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    z-index: -1;
    opacity: 0;
}