.report-info{
  margin: 32rpx 16rpx 0;
  background:#fff;
  border-radius: 16rpx;
}
.report-item{
  display: flex;
  padding: 32rpx;
  line-height: 44rpx;
}
.lable{
  font-size: 30rpx;
  width: 192rpx;
  height: 44rpx;
  line-height: 44rpx;
}
.lable text{
  font-size: 48rpx;
  height: 0;
  width: 0;
  vertical-align: middle;
}
.input-wrap{
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
}
.input-wrap picker{
  flex: 1;
}
.report-dec{
  margin: 16rpx;
  background: #fff;
  border-radius: 16rpx;
}
.report-dec .lable{
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 42rpx;
  padding: 25rpx 32rpx 13rpx;
}
.textarea-wrap{
  padding: 16rpx 32rpx;
}
.textarea-wrap .textarea{
  width: 100%;
  height: 220rpx;
}

.forword::after {
  position: absolute;
  right: 32rpx;
  top: 50%;
  width: 12rpx;
  height: 12rpx;
  content: "";
  border-left: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  -webkit-transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
  transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
}
.submite-btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  line-height: 112rpx;
  background: #E1E1E1;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  border-radius: 0;
}
.submite-btn.allow{
  background: var(--blue);
}
.report-process{
  margin: 32rpx 16rpx 0;
  background:#fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 16rpx 32rpx;
}
.process-item{
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.process-title{
  width: 180rpx;
}
.process-value{
  flex:1
}
.txt-len{
  right: 32rpx;
  bottom: 16rpx;
  color: var(--gray);
}


