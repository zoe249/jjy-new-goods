page {
    background: #f4f4f4;
}

.current-shop {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    color: #313031;
    padding: 16rpx 30rpx;
    background: #fff;
}

.current-shop image {
    width: 48rpx;
    height: 48rpx;
    background: rgba(255, 255, 255, 1);
    border: 1rpx solid rgba(112, 112, 112, 1);
    border-radius: 16rpx;
}

.current-shop view {
    display: block;
    font-size: 24rpx;
    line-height: 48rpx;
    font-weight: 400;
    color: rgba(49, 48, 49, 1);
    padding: 0 35rpx 0 16rpx;
}

.add-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 112rpx;
    font-size: 30rpx;
    line-height: 112rpx;
    text-align: center;
    background: #fff;
    color: var(--blue);
}

.ex-container {
    margin: 16rpx;
    border-radius: 16rpx;
    padding-bottom: 122rpx;
}
