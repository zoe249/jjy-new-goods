@import '/templates/proGoodsList/proGoodsList.wxss';
@import '/templates/waterList/waterList.wxss';

page {
    color: #777;
}

.page-header-haigou {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    z-index: 9;
}

.group-nav {
    position: relative;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #ededed;
    padding: 0 30rpx;
    /* justify-content: center; */
}

.group-nav::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 688rpx;
    height: 4rpx;
    background: #e7e7e7;
    transform: translateX(-50%);
}

.group-nav-item {
    position: relative;
    flex: 1;
    text-align: center;
    height: 76rpx;
    line-height: 76rpx;
    color: #94969c;
}

.group-nav-item.active {
    color: var(--blue);
    font-weight: 600;
}

.group-nav-item.active::after {
    content: "";
    position: absolute;
    bottom: 0rpx;
    left: 0;
    width: 344rpx;
    height: 5rpx;
    background: var(--blue);
    z-index: 2;
}

.share-list-swiper {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    padding-top: 78rpx;
}

scroll-view {
    position: absolute;
    left: 0;
    top: 0;
    padding-top: 76rpx;
}

.colonel-container {
    padding: 49rpx 0 32rpx;
    margin: 0 32rpx;
    border-bottom: 1rpx solid #e7e7e7;
}

.colonel-photo image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 100%;
    border: 1rpx solid #777;
}

.colonel-info {
    padding-left: 32rpx;
    font-size: 24rpx;
    width: 591rpx;
}

.colonel-area {
}

.colonel-name {
    font-size: 30rpx;
    margin-top: 15rpx;
}

.colonel-nums {
    margin-top: 22rpx;
}

.colonel-nums view {
    margin-right: 32rpx;
}

.colonel-nums text {
    color: #FF4752;
    margin-left: 16rpx;
}

.sheet-id {
    margin-top: 5rpx;
}
.extension-model{
    position: fixed;
    left: 0;
    top:0;
    right: 0;
    bottom: 0;
    z-index: 99999;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s;
}
.extension-model.showExtension{
    visibility: visible;
    opacity: 1;
}
.mask{
    position: absolute;
    left: 0;
    top:0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.extension-share-info{
    position: absolute;
    left: 0;
    bottom: 0;
    height: 368rpx;
    width: 100%;
    background: #fff;
}
.gods-info{
    display: flex;
    padding: 48rpx 32rpx;
}
.gods-info image{
    width: 160rpx;
    height: 160rpx;
    border: 1rpx solid #E7E7E7;
}
.gods-dec{
    flex: 1;
    padding-left: 30rpx;
}
.gods-title{
    height:42rpx;
    font-size:30rpx;
    font-weight:400;
    line-height:32rpx;
    color:var(--blue);
}
.gods-i{
    font-size:20rpx;
    font-weight:400;
    line-height:36rpx;
    color:#94969C;
}
.gods-share{
    height:112px;
    line-height: 112rpx;
    color: #fff;
    font-size: 30rpx;
    background:var(--blue);
    border-radius: 0;
}
.gods-share::after{
    border:0;
}