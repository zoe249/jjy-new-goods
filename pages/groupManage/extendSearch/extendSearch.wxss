  background-size: 30rpx;
}

.sel-all::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 60rpx;
  height: 60rpx;
  transform: translate(-50%, -50%);
}

.sel-all.is-true {
  background: url("https://jxgm.jiarong.cn/m/images/icon_check_solid.png") no-repeat center;
  background-size: 30rpx;
