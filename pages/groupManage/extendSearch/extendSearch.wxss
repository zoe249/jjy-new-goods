.begin {
  position: relative;
  height: 50rpx;
  padding-top: 17rpx;
  text-align: center;
  background: #fff;
}

.begin text {
  display: inline-block;
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: var(--black);
  padding: 0 20rpx;
  letter-spacing: 5rpx;
  background: #fff;
}

.begin::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 13rpx;
  width: 100%;
  border-bottom: 1rpx solid #F3F3F4;
  z-index: -1;
}

.swiper-group {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100%;
  padding: 230rpx 0 90rpx;
  background: #fff;
}

.swiper-group swiper-item,
.swiper-group scroll-view {
  position: relative;
  height: 100%;
}
.swiper-group scroll-view{
  padding-bottom: env(safe-area-inset-bottom);
}
.mod-scroll {
  height: 100vh;
}

.header-container {
  position: relative;
  width: 100%;
  height: auto;
}

.header-container .header-image {
  width: 100%;
  height: auto;
}

.header-container .swiper-container .swiper-image {
  width: 100%;
  height: 390rpx;
}

.group-empty-container {
  margin-top: 16rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: #fff;
}

.group-empty-container .empty-icon {
  width: 400rpx;
  height: 400rpx;
}

.group-empty-container .empty-msg {
  margin-top: -30rpx;
  line-height: 1;
  color: #999;
  font-size: 24rpx;
}

.extension-model {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.extension-model.showExtension {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.extension-share-info {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 368rpx;
  width: 100%;
  background: #fff;
}

.gods-info {
  display: flex;
  padding: 48rpx 32rpx;
}

.gods-info image {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #e7e7e7;
  background: url("https://jxgm.jiarong.cn/m/images/detail_goods_b.png?t=418") no-repeat center;
  background-size: 160rpx;
}

.gods-dec {
  flex: 1;
  padding-left: 30rpx;
}

.gods-title {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #313031;
}

.gods-i {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #94969c;
}

.gods-share {
  height: 112px;
  line-height: 112rpx;
  color: #fff;
  font-size: 30rpx;
  background: var(--red);
  border-radius: 0;
}

.gods-share::after {
  border: 0;
}

.footer-container {
  opacity: 0.3;
}

.share-canvas {
  position: absolute;
  left: 0;
  top: -999999999rpx;
  width: 1500rpx;
  height: 2668rpx;
  z-index: -9;
  opacity: 0;
  transform: translate3d(0, 0, -1000rpx);
}

.shareHomePage {
  position: fixed;
  right: 32rpx;
  bottom: 192rpx;
  width: 114rpx;
  height: 114rpx;
}

.shareHomePageX {
  bottom: 338rpx;
}

.shareHomePage button {
  position: absolute;
  left: 0;
  top: 0;
  background: transparent;
  opacity: 0;
  width: 114rpx;
  height: 114rpx;
}

.shareHomePage image {
  width: 114rpx;
  height: 114rpx;
}

.error-page-tpl {
  position: absolute;
}

.group-goods-list-container {
  margin: 0 32rpx;
}

