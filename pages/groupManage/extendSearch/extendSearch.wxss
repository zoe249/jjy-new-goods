.b-scape {
  height: 16rpx;
  background: #f4f4f4;
}

.advertise-btn {
  float: right;
  height: 64rpx;
  line-height: 64rpx;
  color: #fff;
  font-size: 30rpx;
  background: var(--golden);
  padding: 0 16rpx;
  margin: 0;
  border-radius: 32rpx;
}

.advertise-btn::after {
  border: 0;
}

.groupShopList {
  display: flex;
}

.groupShopList image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
}

.groupShopList view {
  position: relative;
  height: 64rpx;
  line-height: 64rpx;
  flex: 1;
  color: var(--black);
  font-size: 24rpx;
  font-weight: bold;
  padding-right: 28rpx;
  max-width: 240rpx;
}

.groupShopList view text {
  position: absolute;
  right: 0;
  top: 50%;
  width: 32rpx;
  height: 32rpx;
  transform: translate(0, -50%);
}

.groupShopList view text.forword::after {
  -webkit-transform: translateY(-50%) scaleY(1) rotateZ(-45deg);
  transform: translateY(-50%) scaleY(1) rotateZ(-45deg);
  transform-origin: left center;
}

.search-mod {
  display: flex;
  padding: 0 32rpx;
  line-height: 64rpx;
  background: #fff;
}

.search-info {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  padding: 0 16rpx;
  background: #f4f4f4;
  background-size: 36rpx;
}

.search-info input {
  height: 64rpx;
  line-height: 64rpx;
  text-align: left;
  padding-left: 64rpx;
  background: url("https://jxgm.jiarong.cn/m/images/icon_gray_search.png") no-repeat 16rpx center;
  background-size: 36rpx;
}

.search-btn {
  display: inline-block;
  width: 96rpx;
  height: 64rpx;
  text-align: center;
  background: var(--red);
  margin-left: 16rpx;
  border-radius: 32rpx;
}

.search-btn button {
  border: 0;
  padding: 0;
  background: transparent;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #fff;
}

.search-btn button::after {
  border: 0;
}


.group-nav {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 9999;
  background: #fff;
}

