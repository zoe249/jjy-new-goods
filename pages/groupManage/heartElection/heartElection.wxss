page{
  background: #f4f4f4;
}
.top-banner image{
  width: 720rpx;
  /* height: 256rpx; */
  margin: 16rpx auto 0;
  border-radius: 16rpx;
}
.scroll-nav {
  position: sticky;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 0 16rpx 0;
  white-space: nowrap;
  z-index: 2;
  background: #f4f4f4;
}

.scroll-nav .scroll-nav-wrap view {
  display: inline-block;
  position: relative;
  padding: 32rpx 32rpx 14rpx;
  color: #444;
  font-size: 28rpx;
  font-weight: 300;
}

.scroll-nav .scroll-nav-wrap view.act {
  font-size: 30rpx;
  font-weight: 600;
  color: #313031;
}

.scroll-nav .scroll-nav-wrap view.act::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 5rpx;
  width: 60%;
  background: #ec414d;
  transform: translateX(-50%);
  border-radius: 2rpx;
}

.market-nav {
  position: sticky;
  top: 0;
  left: 0;
  display: flex;
  text-align: center;
  background: #fff;
}

.market-nav .market-nav-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 30rpx;
  height: 64rpx;
  background: #e7e7e7;
  color: #94969c;
}

.market-nav-item.market-assemble view {
  position: absolute;
  right: 0;
  top: 0;
  width: 24rpx;
  height: 100%;
  background: linear-gradient(90deg, rgba(255, 253, 253, 0) 100%, rgba(148, 150, 156, 0.2) 0%);
}

.market-nav-item.market-rush view {
  position: absolute;
  left: 0;
  top: 0;
  width: 24rpx;
  height: 100%;
  background: linear-gradient(90deg, rgba(148, 150, 156, 0.2) 0%, rgba(255, 253, 253, 0) 100%);
}

.market-nav .market-nav-item text {
  position: relative;
  padding: 14rpx 0;
}

.market-nav .market-nav-item.active {
  background: #fff;
}

.market-nav .market-nav-item.active text {
  color: #313031;
}

.market-nav .market-nav-item.active text::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 34rpx;
  height: 4rpx;
  background: #ec414d;
  transform: translateX(-50%);
}

.share-goods-container {
  margin: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.share-goods-container.share-plate {
  margin-top: 0;
}

.share-goods-list {
  background: #fff;
  padding: 16rpx 0 0;
}

.share-goods-list .goods-item {
  display: flex;
  padding: 16rpx 16rpx 32rpx 16rpx;
  position: relative;
  /* border-bottom: 2rpx solid #f4f4f4; */
}

.share-goods-list .goods-item::after {
  content: "";
  position: absolute;
  left: 2%;
  bottom: 0;
  height: 1rpx;
  width: 96%;
  background: #ededed;
}

.share-goods-list .goods-img {
  width: 240rpx;
}

.share-goods-list .goods-item image {
  width: 208rpx;
  height: 208rpx;
  background: url('https://shgm.jjyyx.com/m/images/icon-default.png?t=418') no-repeat center;
  background-size: 208rpx;
}

.share-goods-list .goods-info {
  padding-top: 16rpx;
}

.share-goods-list .goods-title {
  width: 419rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #444;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-dec {
  width: 260rpx;
  height: 28rpx;
  margin: 8rpx;
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #94969c;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-type {
  width: 64rpx;
  height: 32rpx;
  margin-top: 15rpx;
  background: #fff2f6;
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #ff2d63;
  text-align: center;
}

.share-goods-list .goods-price {
  display: flex;
  margin-top: 16rpx;
}

.share-goods-list .goods-price .p-price {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 36rpx;
  color: #ff2d63;
  margin-right: 32rpx;
}

.share-goods-list .goods-price .o-price {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 300;
  line-height: 36rpx;
  color: #94969c;
}

.share-goods-list .goods-price .o-price text {
  display: inline-block;
  position: relative;
  padding: 0 10rpx;
}

.share-goods-list .goods-price .o-price text::after {
  content: "";
  position: absolute;
  left: 0;
  top: 46%;
  transform: translateY(-50%) scaleY(0.5);
  width: 100%;
  height: 1rpx;
  background: #707070;
}

.share-goods-list .join {
  position: absolute;
  right: 32rpx;
  bottom: 55rpx;
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #ff2d63;
  color: #fff;
  font-size: 24rpx;
  padding: 0;
  border: 0;
  border-radius: 48rpx;
}

.share-goods-list .join::after {
  border: 0;
}
.error-page-tpl{
  top: 50%;
}