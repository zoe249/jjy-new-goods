page {
  background: #f4f4f4;
}

.activity-head {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
  padding: 16rpx;
  border-top: 1rpx solid #e7e7e7;
  border-bottom: 1rpx solid #e7e7e7;
  background: #fff;
}

.market-nav {
  position: sticky;
  top: 0;
  left: 0;
  display: flex;
  text-align: center;
  background: #fff;
}

.market-nav .market-nav-item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  height: 64rpx;
  color: #94969c;
}

.market-nav .market-nav-item text {
  position: relative;
  padding: 14rpx 0;
}

.market-nav .market-nav-item.active text {
  color: #313031;
}

.market-nav .market-nav-item.active text::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 34rpx;
  height: 5rpx;
  background: #FF4752;
  transform: translateX(-50%);
}
.container{
  height: 100vh;
}
.proGoodsList {
  padding-top: 94rpx;
}

.activity-time-wrap {
  display: flex;
  font-size: 24rpx;
  padding: 32rpx;
  justify-content: space-between;
  background: #fff;
}

.activity-time {
  display: flex;
  color: #777;
}

.activity-time .timer {
  white-space:nowrap;
  color: #777;
}

.activity-time .timer text {
  background: #FF4752;
  color: #fff;
  margin: 0 8rpx;
  padding: 0 4rpx;
}

.proGoodsList {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: none;
}

.soonGoodsList {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  padding-top: 94rpx;
  display: none;
}

.soonGoodsList.show-box, .proGoodsList.show-box {
  display: block;
}

.share-goods-list {
  width: 720rpx;
  margin: 16rpx auto;
  background: #fff;
  border-radius: 16rpx;
}

.banner-img {
  width: 720rpx;
  margin: 16rpx auto;
  border-radius: 16rpx;
}

.banner {
  position: relative;
}

.banner .dic {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 64rpx;
  height: 36rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  background: rgba(0, 0, 0, 1);
  opacity: 0.4;
  border-radius: 32rpx;
  letter-spacing: 4rpx;
}

.banner swiper {
  height: 304rpx;
}

.banner swiper-item {
  box-sizing: border-box;
  padding: 16rpx 16rpx 0 16rpx;
}

.banner .img {
  height: 288rpx;
  width: 720rpx;
  background: #fff;
  border-radius: 16rpx;
}
.item-wrap.btt::after{
  content: "";
  width: 656rpx;
  height: 1px;
  background: #e7e7e7;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%) scaleY(0.5);
}
.tuanProGoodsList{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.error-page-tpl{
  top: 40%;
}


.shareHomePage {
  position: fixed;
  left: 32rpx;
  bottom: 192rpx;
  width: 114rpx;
  height: 114rpx;
}

.shareHomePageX {
  bottom: 228rpx;
}

.shareHomePage button {
  position: absolute;
  left: 0;
  top: 0;
  background: transparent;
  opacity: 0;
  width: 96rpx;
  height: 96rpx;
}

.shareHomePage image {
  width: 96rpx;
  height: 96rpx;
}


.share-sheet-pupop{
  display: flex;
  align-items: center;
  background: var(--bgGray);
  padding: 48rpx 0 32rpx;
}
.share-sheet-item{
  flex: 1;
  font-size: 24rpx;
  color: var(--darkGray);
  background: transparent;
  outline: none;
}
.share-sheet-item::after{
  border: none;
}
.share-sheet-pupop text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 68rpx;
  width: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #04DF71 0%, #03C35E 100%);
  color: var(--white);
  margin: 0 auto;
}
.share-sheet-item view{
  margin-top: 16rpx;
  line-height: 1;
}
.share-sheet-cancel{
  height: 112rpx;
  line-height: 112rpx;
  font-size: 30rpx;
  background: #ffffff;
}

.down-loacl-page{
  position: relative;
  height: 100vh;
  width: 750rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 48rpx 98rpx;
}
.down-cover{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.down-info{
  position: absolute;
  left: 98rpx;
  top: 50%;
  right: 98rpx;
  transform: translateY(-50%);
  z-index: 1;
}

.down-img-btn{
  width: 432rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF2D63;
  box-shadow: 0 0 5rpx var(--darkGray);
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  margin: 96rpx auto 0;
}