page {
  background: #f4f4f4;
}

.search-tpl {
  position: sticky;
  top: 0;
  border-top: 1rpx solid#E7E7E7;
  padding: 32rpx 32rpx 16rpx;
  background: #fff;
  z-index: 3;
}

.search-tpl-wrap {
  display: flex;
  align-items: center;
  background: #F8F8F8;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 30rpx;
}
.search-tpl-wrap .picker-btn picker{
  width: 193rpx;
  height: 64rpx;
  line-height: 64rpx;
}
.search-tpl-wrap .picker-btn picker view{
  position: relative;
  padding:0 32rpx 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  background: url(https://shgm.jjyyx.com/m/images/arrow_down.png) no-repeat 152rpx center;
  background-size: 24rpx;
  font-weight: bold;
}
.search-tpl-wrap .picker-btn picker view::after{
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%) scaleX(0.5);
  height: 32rpx;
  width: 2rpx;
  background: #E7E7E7;
}

.search-tpl-img {
  width: 34rpx;
  height: 34rpx;
  margin: 0 16rpx;
}

.search-inner {
  flex: 1;
  display: flex;
  align-items: center;
}

.search-inner .input {
  flex:1;
  height: 72rpx;
  line-height: 72rpx !important;
  font-size: 28rpx;
  color: #313031;
}
/*当前自提点*/

.current-extract-area {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #fff;
  border-radius: 16rpx;
  padding: 45rpx 0;
  margin: 16rpx 16rpx 0;
  text-align: center;
}

.current-extract-info image {
  width: 145rpx;
  height: 145rpx;
  border: 1rpx solid #e7e7e7;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  background: url(https://shgm.jjyyx.com/m/images/app_icon.png?t=418) no-repeat center;
  background-size: 145rpx;
}

.current-extract-info text {
  font-size: 24rpx;
  font-weight: 400;
  color: #777;
}

.current-extract-name {
  font-size: 32rpx;
  font-weight: 400;
  color: #313031;
}

.current-extract-address {
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #777;
  margin-top: 33rpx;
}

.extract-list-wrap {
  background: #fff;
  padding: 0 48rpx;
  border-radius: 16rpx;
  margin: 16rpx;
}

.extract-list {
  display: flex;
  align-items: center;
  position: relative;
  padding: 16rpx 0 16rpx 0;
}
.extract-list-lists{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 24rpx;
}
.hr-b{
  border-bottom: 1rpx solid #e7e7e7;
}

.extract-list-wrap .extract-title {
  font-size: 24rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 96rpx;
  color: var(--blue);
}
.extract-list-image{
  width: 98rpx;
  height: 98rpx;
  background: url(https://shgm.jjyyx.com/m/images/app_icon.png?t=418) no-repeat center;
  background-size: 98rpx;
  border-radius: 100%;
  box-shadow: 0rpx 3rpx 6rpx rgba(0, 0, 0, 0.16);
}
.extract-list-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #313031;
  padding-right: 176rpx;
}

.extract-list-address {
  font-size: 22rpx;
  font-weight: 300;
  color: #777;
  margin-top: 8rpx;
}

.extract-list-distance{
  position: absolute;
  right: 0;
  top:32rpx;
  font-size:24rpx;
  font-weight:400;
  line-height:24rpx;
  color:#FF4752;
}
.choice-address-result {
  position: fixed;
  top: 112rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
  z-index: 9;
}

.choice-address-result .ul {
  padding-left: 32rpx;
}

.choice-address-result .ul .li {
  width: 100%;
}

.choice-address-result .ul .li.cur:after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  width: 32rpx;
  height: 32rpx;
  margin-top: -16rpx;
  background: url(https://shgm.jjyyx.com/m/images/icon_check_active.png) no-repeat center;
  -webkit-background-size: 32rpx;
  background-size: 32rpx;
}

.choice-address-result .ul .li .a {
  display: block;
  padding: 24rpx 32rpx 24rpx 0;
}
.choice-address-result .ul .li:first-child{
  border: 0;
}

.choice-address-result .ul .li .a .em {
  line-height: 44rpx;
  font-size: 28rpx;
}

.choice-address-result .ul .li .a .p {
  line-height: 36rpx;
  font-size: 24rpx;
  color: #777;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
