page{
  background: #f4f4f4;
}
.wrapper {
  background: #fff;
  position: relative;
}

.hidden {
  display: none;
}

.search-top-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  /* height: 100rpx; */
  z-index: 999;
  padding: 16rpx 32rpx;
  display: flex;
  border-top: 1rpx solid #e7e7e7;
  background: #fff;
}

.search-container {
  flex: 1;
  background: #f5f5f5;
  border-radius: 4rpx;
  /* margin-right: 32rpx; */
  padding: 0 56rpx;
  position: relative;
}

.search-container::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 56rpx;
  height: 56rpx;
  background: url('https://shgm.jjyyx.com/m/images/icon_search.png') no-repeat center;
  background-size: 34rpx 34rpx;
}

/* .search-container.focus::before {
  background-image: url('https://shgm.jjyyx.com/m/images/icon_search_active.png');
} */

.search-container .clear-search-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 64rpx;
  height: 64rpx;
  background: url('https://shgm.jjyyx.com/m/images/del.png') no-repeat center;
  background-size: 28rpx 28rpx;
}

.search-container .search-input {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}

.search-top-container .search-cancel {
  font-size: 30rpx;
  color: #777;
  line-height: 0;
  padding: 28rpx 0;
}

.share-goods-container {
  margin: 116rpx 16rpx 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.share-goods-container.share-plate {
  margin-top: 0;
}

.share-goods-list {
  background: #fff;
  padding: 16rpx 0 32rpx;
}

.share-goods-list .goods-item {
  display: flex;
  padding: 16rpx 32rpx 32rpx 16rpx;
  position: relative;
}

.share-goods-list .goods-item::after {
  content: "";
  position: absolute;
  left: 8%;
  bottom: 0;
  height: 2rpx;
  width: 84%;
  background: #ededed;
}

.share-goods-list .goods-img {
  width: 240rpx;
}

.share-goods-list .goods-item image {
  width: 208rpx;
  height: 208rpx;
  background: #ededed;
}

.share-goods-list .goods-info {
  padding-top: 16rpx;
}

.share-goods-list .goods-title {
  width: 419rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: #444;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-dec {
  width: 260rpx;
  height: 28rpx;
  margin: 8rpx;
  font-size: 20rpx;
  font-weight: 300;
  line-height: 36rpx;
  color: #94969c;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-goods-list .goods-type {
  width: 64rpx;
  height: 32rpx;
  margin-top: 15rpx;
  border: 1rpx solid rgba(237, 237, 237, 1);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #FF4752;
  text-align: center;
}

.share-goods-list .goods-price {
  display: flex;
  margin-top: 16rpx;
}

.share-goods-list .goods-price .p-price {
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 36rpx;
  color: #FF4752;
  margin-right: 32rpx;
}

.share-goods-list .goods-price .o-price {
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 300;
  line-height: 36rpx;
  color: #94969c;
}

.share-goods-list .goods-price .o-price text {
  display: inline-block;
  position: relative;
  padding: 0 10rpx;
}

.share-goods-list .goods-price .o-price text::after {
  content: "";
  position: absolute;
  left: 0;
  top: 46%;
  transform: translateY(-50%) scaleY(0.5);
  width: 100%;
  height: 1rpx;
  background: #707070;
}

.share-goods-list .join {
  position: absolute;
  right: 32rpx;
  bottom: 55rpx;
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #FF4752;
  color: #fff;
  font-size: 24rpx;
  padding: 0;
  border: 0;
  border-radius: 48rpx;
}

.share-goods-list .join::after {
  border: 0;
}
