/* pages/user/setting/setting.wxss */
.my-item3{
  font-size: 28rpx;
  padding-left: 32rpx;
  background: #fff;
  margin: 16rpx;
  border-radius: 32rpx;
}
.list{
  height: 128rpx;
  line-height: 128rpx;
  color: #94969C;
}
.list text{
  color: #94969C;
  margin-right: 60rpx;
}
.forword::after {
  position: absolute;
  right: 32rpx;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  content: "";
  border-left: 2rpx solid #94969C;
  border-bottom: 2rpx solid #94969C;
  -webkit-transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
  transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
}
.out-login{
  position: absolute;
  bottom: 0;
  left: 0;
  width:100%;
  min-height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  -webkit-border-radius: 0;
  border-radius: 0;
  background:#FF4752;
  color:#fff;
  box-sizing: content-box;
  -webkit-box-sizing: content-box;
  padding: 0;
  /* padding-bottom: env(safe-area-inset-bottom); */
}
.out-login:after{
  -webkit-border-radius: 0;
  border-radius: 0;
  background:#FF4752;
  color:#fff;
  height:0;
  width:0;
  border:0;
}
.button-hover{
  background:#999;
}