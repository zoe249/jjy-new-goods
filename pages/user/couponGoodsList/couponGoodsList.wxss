.wrapper {
  background: #fff;
  height: 100vh;
}

.hidden {
  display: none;
}

.search-top-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 100rpx;
  z-index: 999;
  padding: 22rpx 32rpx;
  display: flex;
  border-bottom: 2rpx solid #ededed;
  background: #fff;
}

.search-container {
  flex: 1;
  background: #f5f5f5;
  border-radius: 28rpx;
  margin-right: 32rpx;
  padding: 0 56rpx;
  position: relative;
}

.search-container::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 56rpx;
  height: 56rpx;
  background: url('https://shgm.jjyyx.com/m/images/icon_gray_search.png') no-repeat center;
  background-size: 30rpx 30rpx;
}

.search-container.focus::before {
  background-image: url('https://shgm.jjyyx.com/m/images/icon_search_active.png');
}

.search-container .clear-search-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 56rpx;
  height: 56rpx;
  background: url('https://shgm.jjyyx.com/m/images/del.png') no-repeat center;
  background-size: 28rpx 28rpx;
}

.search-container .search-input {
  width: 100%;
  height: 56rpx;
  font-size: 26rpx;
}

.my-cart-icon {
  position: relative;
  width: 50rpx;
  height: 56rpx;
  background: url('https://shgm.jjyyx.com/m/images/icon_goods_cart.png') no-repeat center;
  background-size: contain;
  /*border-right: 2rpx solid #EDEDED;*/
}

.cart-count {
  position: absolute;
  right: -15rpx;
  top: -5rpx;
  background: #FF4752;
  font-size: 20rpx;
  line-height: 0;
  padding: 12rpx;
  border-radius: 12rpx;
  text-align: center;
  color: #fff;
}

.content {
  padding-top: 100rpx;
  min-height: 100vh;
}

.second-cate-scroller {
  background: #f5f5f5;
}

.goods-list-container {
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
  padding: 0 16rpx;
}
.couponContent{
  padding: 20rpx 40rpx 0;
}
.laba{
  display: inline-block;
  width: 23rpx;
  height: 23rpx;
}
