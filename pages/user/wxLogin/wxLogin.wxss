.wx-logo-wrap image{
  width: 304rpx;
  height: 304rpx;
  margin: 180rpx auto 60rpx;
}
.wx-logo-wrap button{
  height: 96rpx;
  line-height: 96rpx;
  width: 686rpx;
  border-radius: 10rpx;
  margin: 40rpx auto 0;
  font-size: 38rpx;
}
