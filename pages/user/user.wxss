/* pages/user/user.wxss */
.forword::after {
	position: absolute;
	right: 32rpx;
	top: 50%;
	width: 16rpx;
	height: 16rpx;
	content: "";
	border-left: 2rpx solid #999;
	border-bottom: 2rpx solid #999;
	-webkit-transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
	transform: translateY(-50%) scaleY(1) rotateZ(-135deg);
}

.head-bg {
	width: 750rpx;
	height: 180rpx;
}

.my_vip_integral .a.cell image {
	float: left;
	width: 90rpx;
	height: 100rpx;
	margin: 30rpx 40rpx 30rpx 30rpx;
}

.my_vip_integral .a.cell .span {
	float: left;
	margin-top: 20rpx;
}

.my_vip_integral .a.cell .strong {
	display: block;
	font-size: 32rpx;
}

.my_vip_integral .a.cell .em {
	font-size: 24rpx;
	line-height: 32rpx;
	color: #d2ad00;
	margin-top: 8rpx;
}

.my_vip_integral .s {
	margin-right: 32rpx;
}

.my_vip_integral .a:first-child .strong {
	color: #444;
}

.my_vip_integral .a:last-child .strong {
	color: #444;
}

.user-head {
	display: flex;
	justify-content: space-between;
	justify-items: center;
	align-items: center;
	height: 224rpx;
	background: var(--blue);
	color: #fff;
	border-bottom-left-radius: 32rpx;
	border-bottom-right-radius: 32rpx;
	overflow: hidden;
}

.user-info {
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 32rpx;
	padding: 0 32rpx;
}

.user-info text {
	display: block;
	/* display: iblock;
    vertical-align: middle; */
}

.name-phone text {
	height: 42rpx;
}

.name-phone .mobile {
	margin-top: 9rpx;
}

.user-photo {
	/* display: inline-block; */
	width: 129rpx;
	height: 129rpx;
	background: url("https://shgm.jjyyx.com/m/images/custorm_photo.jpg?t=41801") no-repeat center;
	background-size: 129rpx;
}

.user-photo-image {
	display: inline-block;
	width: 129rpx;
	height: 129rpx;
	margin-right: 30rpx;
	vertical-align: middle;
	-webkit-border-radius: 129rpx;
	border-radius: 129rpx;
	overflow: hidden;
}

.vip-code-container {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 166rpx;
	height: 80rpx;
	color: var(--blue);
	background: #fff;
	margin-right: 32rpx;
	border-radius: 40rpx;
}

.vip-code {
	width: 64rpx;
	height: 64rpx;
}

.vip-code-container text {
	font-size: 20rpx;
	font-weight: 400;
	line-height: 28rpx;
}

.head-nav-title {
	margin: 0 0 0 16rpx;
	height: 64rpx;
	line-height: 64rpx;
	font-size: 24rpx;
	font-weight: 600;
	color: var(--blue);
}

.my-wallet-container {
	width: 720rpx;
	margin: 16rpx 16rpx 0;
	background: #fff;
	border-radius: 16rpx;
}

.head-nav {
	height: 122rpx;
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	font-size: 32rpx;
	z-index: 2;
	-webkit-box-pack: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
}

.head-nav .item-col2 {
	flex: 1;
	height: 122rpx;
	max-width: 50%;
	font-size: 32rpx;
	font-weight: bold;
	color: #444;
	padding: 20rpx 0 20rpx;
}

.head-nav .item-col2 .text {
	display: block;
	font-size: 22rpx;
	margin-top: 16rpx;
	font-weight: normal;
}

.head-nav .c-color {
	padding-left: 24rpx;
}

.wallet-card text {
	font-weight: bold;
	display: inline-block;
}

.wallet-card text::after {
	content: "￥";
	position: absolute;
	left: -24rpx;
	bottom: 4rpx;
	line-height: 1;
	font-size: 24rpx;
	color: #444;
}

.wallet-num {
	color: #444;
	font-size: 32rpx;
}

.my_vip_integral {
	background: #fff;
}

/* 订单管理 */
.my-order-container {
	margin: 16rpx 16rpx 0;
	background: #fff;
	border-radius: 16rpx;
}

.my-order-container .item2-title {
	position: relative;
	margin: 0 0 0 16rpx;
	height: 64rpx;
	line-height: 64rpx;
}

.my-order-title {
	font-size: 24rpx;
	font-weight: bold;
	color: var(--blue);
}

.item2-title .my-order {
	position: absolute;
	right: 0;
	top: 0;
	padding-right: 60rpx;
	font-size: 22rpx;
	color: #999;
}

/* 我的服务 */
.grid-container {
	background: #fff;
	margin: 16rpx 16rpx 0;
	border-radius: 16rpx;
	padding-bottom: 36rpx;
}

.grid-title {
	height: 64rpx;
	line-height: 64rpx;
	font-size: 24rpx;
	font-weight: bold;
	color: var(--blue);
	padding: 0 16rpx;
}

.user-hy {
	position: relative;
	display: inline-block;
	margin-top: 8rpx;
	padding: 0 0 0 45rpx;
	height: 50rpx;
	line-height: 50rpx;
	color: #fefefe;
	background: #60ccf1;
	-webkit-background-size: 0.75rem 0.75rem;
	background-size: 0.75rem 0.75rem;
	border-radius: 1.5625rem;
}

.user-hy image {
	position: absolute;
	left: -7rpx;
	top: -9rpx;
	width: 72rpx;
	height: 72rpx;
	z-index: 1;
}

.user-hy button {
	height: 50rpx;
	line-height: 50rpx;
	background: transparent;
	color: #fefefe;
	padding-left: 30rpx;
	font-size: 18rpx;
	vertical-align: bottom;
}

.user-hy button::after {
	border: 0;
}

.user-hy text {
	display: inline;
	font-size: 30rpx;
	margin-right: 10rpx;
}

.head-nav .c-color:before {
	content: '￥';
	position: absolute;
	left: 0;
	bottom: 0;
	font-size: 24rpx;
}

.guess-you-like {
	width: 720rpx;
	margin: 32rpx auto;
	position: relative;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	border-radius: 16rpx;
	overflow: hidden;
}

.guess-you-like-banner {
	width: 100%;
	text-align: center;
	padding: 0 0 16rpx;
}

.guess-you-like-banner image {
	display: inline-block;
	width: 356rpx;
	height: 67rpx;
}
.guess-you-like-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  border-radius: 16rpx;
  overflow: hidden;
}
.guess-like-item{
  width: 50%;
  background: #fff;
}
.guess-like-item:nth-child(2n+1){
  border-right: 1px solid #f4f4f4;
}
.guess-like-item:last-child{
  border-right: 0;
}
.single-product {
	margin: 0 16rpx;
	border-radius: 4rpx;
}