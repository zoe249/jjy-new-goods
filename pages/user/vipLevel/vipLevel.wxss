.vip_h_bg{
  height: 360rpx;
}
.vip-nav{
  display: flex;
  position: absolute;
  /* justify-content: center; */
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  background: rgba(255,255,255,0.3);
  z-index: 99;
}
.vip-nav::after{
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 0;
    height: 94rpx;
    border-right: 1rpx solid #f9c126;
    margin-left: -1rpx;
}
.vip-nav-item{
  flex: 1;
  text-align: center;
}
.vip-nav-item text{
  font-size: 36rpx;
  padding-left: 12rpx;
}
.score-value text{
  color: #FF4752;
}
.growth-value text{
  color: #7dc81d;
}