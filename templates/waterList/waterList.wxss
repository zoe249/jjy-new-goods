.water-list-container {
  background: #fff;
}

.store-name {
  font-size: 24rpx;
  color: #313031;
  padding: 32rpx 32rpx 15rpx 32rpx;
}

.water-goods-list {
  width: 100%;
  height: 194rpx;
  padding: 0 0 0 32rpx;
  white-space: nowrap;
  background: #fff;
}

.goods-wrap {
  position: relative;
  display: inline-block;
  margin-right: 10rpx;
  background: #fcfcfc url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat center;
  background-size: 100%;
  border: 1rpx solid #E7E7E7;
}

.goods-img {
  width: 126rpx;
  height: 126rpx;
  /* border: 1rpx solid #E7E7E7; */
}

.water-nums {
  padding: 16rpx 32rpx 0;
  color: #313031;
  font-size: 24rpx;
}

.water-list-bottom {
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #94969c;
  padding: 14rpx 32rpx;
}

.water-share-box {
  text-align: right;
  margin: 0 32rpx;
  height: 96rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.water-share-btn {
  float: right;
  width: 192rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #fff;
  border: 1rpx solid#CBAD7E;
  border-radius: 4rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #cbad7e;
}

.water-share-btn::after {
  border: 0;
}
