.coupon-item {
  margin: 24rpx 32rpx 0 32rpx;
  /* background: url('https://shgm.jjyyx.com/m/images/bgmanjian.png') no-repeat center; */
  background-size: cover;
  display: flex;
  align-items: stretch;
  position: relative;
  background: #fff;
}
.unavailable{
  -webkit-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}
