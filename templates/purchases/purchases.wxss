.integral_item {
    color: #999;
    font-size: 28rpx;
}

.integral_item .h3,
.integral_item .li {
    padding: 30rpx 30rpx 17rpx;
}

.integral_item .p {
    font-size: 24rpx;
    color: #444;
}

.integral_item .span {
    font-size: 20rpx;
}

.integral_item .em {
    position: absolute;
    right: 32rpx;
    top: 50%;
    font-size: 30rpx;
    color: #FF4752;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}

.c-green-color {
    color: #7dc81d !important;
}
.store-name{
    font-size: 32rpx;
    line-height: 36rpx;
    padding-bottom: 8rpx;
    color: #313031;
}