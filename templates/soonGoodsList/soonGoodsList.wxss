.goods-item-container {
    position: relative;
    /* margin-top: 16rpx; */
    width: 100%;
    padding: 30rpx 32rpx 16rpx;
    background: #FFF;
}

.goods-item-wrap {
    display: flex;
    align-items: center;
    justify-items: center;
}

.goods-item-container::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    height: 2rpx;
    width: 688rpx;
    transform: translateX(-50%);
    background: #E7E7E7;
}

.goods-item-container.no-hr::after {
    background: #fff;
}

.goods-item-container .is-new {
    position: absolute;
    left: 32rpx;
    top: 30rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 999;
}

.checkbox-item {
    position: relative;
    width: 30rpx;
    height: 30rpx;
    background: url("https://shgm.jjyyx.com/m/images/icon_u_sel.png") no-repeat center;
    background-size: 30rpx;
    margin-right: 16rpx;
}
.checkbox-item.is-true{
    background: url("https://shgm.jjyyx.com/m/images/icon_sel.png") no-repeat center;
    background-size: 30rpx;
}
.checkbox-item::after {
    content: "";
    position: absolute;
    left: -40rpx;
    top: -40rpx;
    width: 120rpx;
    height: 120rpx;
}

.goods-item-container .goods-cover-image {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border: 2rpx solid #ededed;
}

.goods-item-container:last-child::after {
    background: #fff;
}

.goods-item-container.group-sold-out .goods-cover-image:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
}

.goods-item-container .goods-info-container {
    position: relative;
    flex: 1;
    height: 160rpx;
    margin-left: 32rpx;
    display: flex;
    flex-direction: column;
    /* justify-content:space-between;
  align-content:space-between; */
    font-size: 24rpx;
    overflow: hidden;
}

.pro-type {
    position: absolute;
    right: 0;
    top: 0;
    width: 113rpx;
    /* height:32rpx; */
    height: 0;
    padding: 14rpx 0 16rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 0;
    text-align: center;
    color: #94969C;
    border: 1rpx solid #94969C;
    border-radius: 4rpx;
}

.goods-item-container .goods-info-container .goods-name-container {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #444;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
    -webkit-line-clamp: 2;
}

goods-item-container .goods-info-container .goods-name-container .goods-produce {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.goods-item-container .goods-info-container .sale-msg-container {
    margin-top: 12rpx;
    width: 100%;
}

.goods-item-container .goods-info-container .sale-msg-container .need-count {
    font-size: 24rpx;
    line-height: 1;
    color: #999;
}

.goods-item-container .goods-info-container .sale-msg-container .sales-volume {
    margin-left: 10rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #FF4752;
}

.goods-item-container .goods-info-container .goods-name {
    display: block;
    width: 100%;
    height: 40rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(119, 119, 119, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-item-container .goods-info-container .goods-tag {
    display: block;
    width: 383rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(148, 150, 156, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goods-item-container .goods-info-container .goods-prime-price-container {
    position: absolute;
    bottom: 0;
    left: 0;
    color: #94969C;
    /* align-content:space-between;   */
    /* margin-top: 20rpx; */
    /* align-self:flex-end; */
}

.goods-item-container .goods-info-container .goods-price-container {
    width: 100%;
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}

.goods-item-container .goods-info-container .price-msg {
    font-size: 24rpx;
    color: #999;
    line-height: 1;
}

.goods-prime-price {
    font-size: 30rpx;
    color: #313031;
    font-weight: bold;
}

.goods-item-container .goods-info-container .goods-price-container .symbol {
    margin-left: 10rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #FF4752;
}

.goods-item-container .goods-info-container .goods-price-container .sale-price {
    font-size: 32rpx;
    color: #FF4752;
    line-height: 0.9
}

.goods-item-container .goods-info-container .min-buy-count {
    margin-top: 20rpx;
    font-size: 40rpx;
    line-height: 0;
    color: #FFA601;
    padding: 26rpx 32rpx;
    text-align: center;
    border: 2rpx solid #FFA800;
    border-radius: 26rpx;
    transform-origin: 0 0;
    transform: scale(0.5);
}

