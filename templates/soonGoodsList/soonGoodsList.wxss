    /* padding-left: 46rpx; */
}

.sale-price-container {
    display: flex;
    justify-content: space-between;
    height: 64rpx;
    line-height: 64rpx;
    margin-top: 17rpx;
}

.need-count {
    font-size: 24rpx;
    color: #313031;
