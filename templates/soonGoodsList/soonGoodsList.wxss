    line-height: 1;
    color: #999;
}

.last-group-container .grouper-list-container {
    margin-top: 22rpx;
    width: 100%;
    display: flex;
    align-items: center;
}

.last-group-container .grouper-list-container .member-item-header {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
