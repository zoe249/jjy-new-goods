}

.goods-item-container .goods-info-container .sale-price-container .symbol {
    margin-left: 20rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #FF4752;
}

.goods-item-container .goods-info-container .sale-price-container .sale-price {
    font-size: 38rpx;
    line-height: 0.9;
    color: #FF4752;
}

.goods-item-container .goods-info-container .sale-price-container .sale-unit {
    font-size: 24rpx;
    line-height: 1;
    color: #999;
}

.group-msg-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 15rpx;
    color: #94969C;
    font-size: 24rpx;
}

.group-msg-container .sales-volume {
    font-size: 24rpx;
    line-height: 1;
}

.join-btn {
    width: 180rpx;
    padding: 28rpx 0 32rpx;
    text-align: center;
    color: #CBAD7E;
    line-height: 0;
    font-size: 30rpx;
    background:rgba(203,173,126,0.1);
    border-radius: 4rpx;
    /* margin-left: 70rpx; */
}

.group-soon-begin .join-btn {
    color: #94969C;
    border: 0;
    background:rgba(244,244,244,1);
}

.group-soon-begin .goods-item-wrap-bottom {
    padding-left: 0;
}

.goods-item-container.group-sold-out .goods-info-container .group-msg-container .join-btn {
    background: #ccc;
}

.last-group-container {
    width: 100%;
