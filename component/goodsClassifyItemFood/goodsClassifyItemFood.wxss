/* component/goodsItem/goodsItem.wxss */
.li{
  position: relative;
  padding:16rpx 0 16rpx 208rpx;
  border-bottom:1rpx solid #f4f4f4;
}
.li .goods-img{
  position:absolute;
  top:16rpx;
  left:0;
}
.li .goods-img .coverImage{
  width:176rpx;
  height:176rpx;
  /* border:1rpx solid #EDEDED; */
  background: url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat center;
  background-size: 100%;
}
.li .li-left-proTag{
  position: absolute;
  top:8rpx;
  left:8rpx;
  width:64rpx;
  height:64rpx;
}
.li .li-right-proTag{
  position: absolute;
  top:8rpx;
  right:8rpx;
  width:64rpx;
  height:64rpx;
}
.li .goods-cnt{
  position: relative;
  min-height:176rpx;
  padding:0 0 46rpx;
}
.li .goods-cnt .goods-name{
  padding:10rpx 0 0;
  line-height:32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size:24rpx;
  color:#444444;
  min-height:32rpx;
  margin:0 0 10rpx;
}
.li .goods-cnt .goods-des{
  padding:0 0 10rpx;
  line-height:40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size:20rpx;
  color:#94969C;
  min-height:40rpx;
}
.li .goods-cnt .goods-tag{
  
}
.li .goods-cnt .goods-tag .tag-item{
  display: inline-block;
  padding:0 6rpx 0;
  min-width:48rpx;
  line-height:26rpx;
  font-size:18rpx;
  text-align: center;
  border-radius: 23rpx;
  background-color: #FDEBED;
  color:#FF4752;
  margin:10rpx 16rpx 10rpx 0;
}
.li .goods-cnt .goods-tag .tag-item:nth-child(2n){
  background-color: #fff6e5;
  color:#FFA601;
}
.li .goods-cnt .prime-price{
  font-size:22rpx;
  line-height:30rpx;
  text-decoration: line-through;
  color:#94969C;
  min-height:30rpx;
}
.li .goods-cnt .goods-price{
  position:absolute;
  bottom:0;
  left:0;
  display: -webkit-flex;
  display:flex;
  justify-content: flex-start;
  align-items:flex-end;
}
.li .goods-cnt .goods-price .price{
  position: relative;
  color:#FF4752;
  font-size: 32rpx;
}
.li .goods-cnt .goods-price .price::before{
  content: 'ï¿¥';
  color:#FF4752;
  font-size: 22rpx;
}
.li .goods-cnt .goods-price .unit{
  color:#94969C;
  font-size:20rpx;
}
.li .goods-cnt .btn{
  position:absolute;
  right:0;
  bottom:0;
  width:48rpx;
  height:48rpx;
  text-indent:-9999rpx;
  background: url("https://shgm.jjyyx.com/m/images/icon_add_shaow.png") no-repeat center;
  background-size: 100%;
}
.li .goods-cnt .btn-text{
  position:absolute;
  right:0;
  bottom:0;
  height:40rpx;
  width:90rpx;
  line-height:40rpx;
  border-radius:20rpx;
  background: #FF4752;
  color:#fff;
  font-size: 22rpx;
  text-align: center;
}
.li .goods-cnt .shouqing-text{
  position:absolute;
  right:0;
  bottom:0;
  line-height:36rpx;
  color:#94969C;
  font-size: 22rpx;
}

