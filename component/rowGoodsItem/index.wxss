.join {
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #FF4752;
  color: #fff;
  font-size: 24rpx;
  padding: 0;
  border: 0;
  border-radius: 48rpx;
  margin-left: auto;
  text-align: center;
}

.join.not-stock {
  background: #ededed;
  color: var(--gray);
}

.join::after {
  border: 0;
}
.ranking{
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  width: 96rpx;
  height: 96rpx;
}
.ranking .rank-img{
  width: 96rpx;
  height: 96rpx;
}