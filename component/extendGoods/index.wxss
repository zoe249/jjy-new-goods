
/* 接龙 */
.tg-container {
  width: 686rpx;
  padding: 32rpx 0 16rpx;
  margin: 0 auto;
}

.tg-item-wrap {
  position: relative;
  display: flex;
}
.tg-new{
  width: 60rpx;
  height: 60rpx;
  left: 16rpx;
  top: 16rpx;
}

.tg-cover {
  width: 160rpx;
  height: 160rpx;
}

.tg-cover-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: var(--bgGrey);
  overflow: hidden;
}

.tg-goods {
  flex: 1;
  display: flex;
  flex-flow: column;
  padding-left: 32rpx;
  height: 160rpx;
}

.tg-goods-name {
  font-size: 30rpx;
  color: var(--black);
  line-height: 1.2;
}
.tg-item-sy{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 96rpx;
  height: 96rpx;
  background: #FFF url(https://shgm.jjyyx.com/m/images/icon_o_siyou.png) no-repeat center;
  background-size: 96rpx;
}
.tg-goods-tag {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: var(--gray);
  margin-top: 14rpx;
  /* padding-right: 112rpx; */
}
.tg-goods-prime{
  margin-top: auto;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: var(--gray);
}
.tg-goods-bottom{
  margin-top: 16rpx;
}
.tg-goods-bill{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--black);
}
.tg-goods-bill-wrap{
  display: flex;
}
.tg-join-btn{
  height: 64rpx;
  padding: 0 42rpx;
  text-align: center;
  color: #fff;
  line-height: 64rpx;
  font-size: 30rpx;
  background: var(--golden);
  border-radius: 32rpx;
}
.tg-goods-btn{
  height: 64rpx;
  padding: 0 42rpx;
  text-align: center;
  color: var(--gray);
  line-height: 64rpx;
  font-size: 30rpx;
  background: var(--grayWhite);
  border-radius: 32rpx;
}
.tg-goods-count{
  font-size: 24rpx;
  font-weight: bold;
}
.tg-goods-count .text{
  font-size: 30rpx;
  margin-left: 16rpx;
}
.tg-goods-amount{
  font-size: 30rpx;
  color: var(--red);
  font-weight: bold;
  margin-left: 32rpx;
}
.tg-goods-timer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--gray);
  font-size: 24rpx;
  margin-top: 16rpx;
}
.tg-goods-time{
  color: var(--red);
}
.search-page{
  padding: 0 32rpx;
}
