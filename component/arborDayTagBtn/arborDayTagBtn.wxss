.right_one
{
  width: 10.2vh;
  height: 9.2vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  /* box-shadow: 0rpx 0rpx 4rpx white;*/
}
/*
   旋转
*/
.right_one .right_one_bj
{
  width: 6.0vh;
  height: 6.0vh;
  position: absolute;
  top: 0;
  left: 2vh;
  animation: rotate_tag 3s linear infinite;
  box-shadow: 0rpx 0rpx 4rpx #ffffff99;
    border-radius: 3.0vh;
}
@keyframes  rotate_tag
{
  0%{
    transform: rotateZ(0deg);
  }
  100%{
    transform: rotateZ(360deg);
  }
  
}
.right_one .right_one_tag
{
  width: 2.48vh;
  height: 2.48vh;
  margin-top: 1.56vh;
  z-index: 5;
}
 .right_one .right_one_title
{
  z-index: 5;
  text-align: center;
  font-size: 23rpx;
  color: white;
  margin-top: 0.2vh;
  width: 100%;
}
.text-shadow-title_sh
{
  text-shadow: 0px 0px 4px  #314431;
}
.text-shadow-title_yxgz
{
  text-shadow: 0px 0px 4px #000090;
}
