/* component/goodsItem/goodsItem.wxss */

.goods-item {
  width: 216rpx;
  /* padding: 16rpx; */
  background: #fff;
  border-radius: 8rpx;
}

.goods-item.no-delivery {
  opacity: 0.6;
  filter: grayscale(1);
}

.goods-item .goods-image {
  width: 100%;
  position: relative;
  width: 216rpx;
  height: 216rpx;
  border-radius: 8rpx;
  margin: 0 auto;
}

.goods-item .goods-image .goods-playButton-block{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.goods-item .goods-image .goods-playButton-block .sku-playButton{
  width: 50rpx;
  height: 50rpx;
}

.goods-item .goods-image .goods-cover {
  width: 100%;
  height: 216rpx;
  background: url('https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418') no-repeat center;
  background-size: cover;
  border-radius: 8rpx;
}
.goods-item .goods-image .pro-tag-msg{
  display: inline-block;
  position: absolute;
  left: 8rpx;
  top: 8rpx;
  border: 1rpx solid var(--orange);
  background: var(--orangeLight);
  font-size: 20rpx;
  border-radius: 12rpx;
  line-height: 24rpx;
  padding: 0 8rpx;
  color: var(--orange);
  max-width: 132rpx;
}
.goods-item .goods-image .goods-left-proTag {
  position: absolute;
  left: 8rpx;
  top: 8rpx;
  width: 70rpx;
  height: 70rpx;
}

.goods-item .goods-image .goods-right-proTag {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  width: 70rpx;
  height: 70rpx;
}
.goods-item .goods-image .goods-menber-proTag{
  position: absolute;
  right: 40rpx;
  top: 46rpx;
  width: 70rpx;
  height: 70rpx;
}
.goods-item .goods-image .goods-proInfo {
  position: absolute;
  left: 24rpx;
  top: 300rpx;
  border: 2rpx solid #ffa601;
  border-radius: 13rpx;
  font-size: 20rpx;
  color: #ffa601;
  line-height: 0;
  padding: 13rpx 16rpx;
}
.goods-item .goods-bottom-wrap{
  position: relative;
  padding: 16rpx 16rpx 8rpx 16rpx;
}
.goods-item .goods-name {
  width: 100%;
  line-height: 1;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* padding: 0 16rpx; */
  color: #444;
}

.goods-item .goods-name-contaienr {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  width: 100%;
  height: 76rpx;
  margin-top: 12rpx;
  padding: 0 16rpx;
  color: #444;
  font-size: 28rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.goods-item .goods-name-contaienr .produce-icon {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
}

.goods-item .goods-tags {
  width: 100%;
  line-height: 1;
  margin-top: 10rpx;
  /* padding: 0 16rpx; */
  font-size: 20rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-item .goods-tags.sale-price {
  display: flex;
  align-items: center;
}

.goods-item .goods-tags.sale-price .group-num {
  margin-right: 20rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #444;
}

.goods-item .goods-tags.sale-price .prime-price {
  text-decoration: line-through;
  line-height: 1;
  color: #999;
  font-size: 24rpx;
}

.goods-item .goods-tags:after, .goods-item .goods-name:after {
  content: ";";
  opacity: 0;
}

.goods-info-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 38rpx;
  overflow: hidden;
  /* min-height: 80rpx; *//* padding: 0 16rpx; */
}

.goods-info-container .goods-price-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.group-info {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

.goods-info-container .goods-price {
  margin-top: 8rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 4rpx;
}

.goods-info-container .big-font {
  font-size: 30rpx;
  color: #ff4752;
  line-height: 1;
}

.goods-info-container .small-font {
  font-size: 20rpx;
  color: #ff4752;
  line-height: 1;
}

.goods-info-container .sales-unit {
  font-size: 20rpx;
  line-height: 1;
  color: #999;
}

.goods-info-container .goods-price .prime-price {
  display: inline-block;
  margin-left: 8rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1;
  text-decoration: line-through;
}

.goods-info-container .add-cart {
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 16rpx;
  background: url("https://shgm.jjyyx.com/m/images/icon_add.png") no-repeat center;
  background-size: contain;
  /* box-shadow: 2rpx 4rpx 16px rgba(0, 0, 0, 0.16); */
}

.goods-info-container .add-cart::after {
  content: "";
  position: absolute;
  right: -16rpx;
  top: -24rpx;
  width: 70rpx;
  height: 70rpx;
}

.goods-info-container .shouqing-text {
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
  font-size: 20rpx;
  color: #999;
  line-height: 32rpx;
}

.goods-info-container .join-group {
  position: absolute;
  bottom: 8rpx;
  right: 16rpx;
  width: 80rpx;
  text-align: center;
  background: #ff4752;
  color: #fff;
  line-height: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  font-size: 20rpx;

}
.goods-item.sideslip .goods-bottom-wrap{
  padding: 16rpx 8rpx 8rpx 8rpx;
}