.goods-img {
  position: relative;
  width: 304rpx;
}

.goods-item image {
  width: 304rpx;
  height: 304rpx;
  background: url(https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418) no-repeat center;
  background-size: 304rpx 304rpx;
}

.goods-info {
  display: flex;
  flex-flow: column;
  flex: 1;
  position: relative;
  height: 304rpx;
  padding-left: 16rpx;
}

.goods-info .stock-state {
  width: 224rpx;
  color: #FF4752;
  font-size: 20rpx;
  font-weight: 300;
