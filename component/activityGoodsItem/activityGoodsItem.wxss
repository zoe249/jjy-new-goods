/* component/activityGoodsItem/activityGoodsItem.wxss */

.goods-item {
    width: 360rpx;
    border-bottom: 2rpx solid #f5f5f5;
    /* margin-top: 16rpx; */
    /* margin-left: 16rpx; */
    padding-bottom: 20rpx;
    background: #FFF;
}

.goods-item.no-delivery {
    opacity: 0.6;
    filter: grayscale(1);
}

.goods-item .goods-image {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 30rpx 24rpx 16rpx;

}

.goods-item .goods-image .goods-cover {
    width: 100%;
    height: 312rpx;
    background: url('https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418') no-repeat center;
    background-size: cover;
}
.goods-item .goods-image .pro-tag-msg{
    display: inline-block;
    position: absolute;
    left: 40rpx;
    top: 46rpx;
    border: 1rpx solid var(--orange);
    background: var(--orangeLight);
    font-size: 20rpx;
    border-radius: 12rpx;
    line-height: 24rpx;
    padding: 0 8rpx;
    color: var(--orange);
    max-width: 132rpx;
}
.goods-item .goods-image .goods-left-proTag {
    position: absolute;
    left: 20rpx;
    top: 20rpx;
    width: 70rpx;
    height: 70rpx;
}

.goods-item .goods-image .goods-right-proTag {
    position: absolute;
    right: 40rpx;
    top: 46rpx;
    width: 70rpx;
    height: 70rpx;
}
.goods-item .goods-image .goods-menber-proTag{
    position: absolute;
    right: 40rpx;
    top: 46rpx;
    width: 70rpx;
    height: 70rpx;
}

.goods-item .goods-image .goods-proInfo {
    position: absolute;
    left: 24rpx;
    top: 300rpx;
    border: 2rpx solid #ffa601;
    border-radius: 13rpx;
    font-size: 20rpx;
    color: #ffa601;
    line-height: 0;
    padding: 13rpx 16rpx;
}

.goods-item .goods-name {
    width: 100%;
    line-height: 0;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 16rpx;
    margin-top: 10rpx;
}

.goods-item .goods-name-contaienr {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    height: 76rpx;
    margin-top: 12rpx;
    padding: 0 16rpx;
    color: #444;
    font-size: 28rpx;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal;
}

.goods-item .goods-name-contaienr .produce-icon {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
}

.goods-item .goods-tags {
    width: 100%;
    line-height: 0;
    margin-top: 6rpx;
    padding: 14rpx 16rpx;
    font-size: 20rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-item .goods-tags.sale-price {
    text-decoration: line-through;
}

.goods-item .goods-tags:after {
    content: ";";
    opacity: 0;
}

.goods-info-container {
    width: 100%;
    height: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    /* margin-top: 8rpx; */
    padding: 0 16rpx;
}

.goods-info-container .goods-price {
    color: #ff4752;
    line-height: 0;
    padding: 16rpx 0;
    font-size: 30rpx;
}

.goods-info-container .big-font {
    /* font-size: 38rpx; */
}

.goods-info-container .small-font {
    font-size: 24rpx;
}

.goods-info-container .sales-unit {
    font-size: 24rpx;
    color: #999;
}

.goods-info-container .del-price {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
    margin-left: 8rpx;
}

.goods-info-container .add-cart {
    width: 32rpx;
    height: 32rpx;
}

.goods-info-container .shouqing-text {
    font-size: 20rpx;
    color: #999;
    line-height: 0;
    padding: 13rpx 0;
}