/* component/activityFullGoodsItem/activityFullGoodsItem.wxss */

:host {
  width: 100%;
}

.full-goods-item-container{
  width: 100%;
  padding: 0 24rpx;
  background: #FFF;
}

.full-goods-item-container .full-goods-item {
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 32rpx 0;
  overflow: hidden;
  display: flex;
  align-items: stretch;
}

.full-goods-item-container .full-goods-item.no-delivery {
  opacity: 0.6;
  filter: grayscale(1);
}

.full-goods-item-container .full-goods-item .goods-image {
  flex: none;
  width: 208rpx;
  height: 208rpx;
  position: relative;
}

.full-goods-item-container .full-goods-item .goods-image .goods-cover {
  width: 100%;
  height: 208rpx;
  background: url('https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418') no-repeat center;
  background-size: cover;
}

.full-goods-item-container .full-goods-item .goods-image .goods-left-proTag {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 70rpx;
  height: 70rpx;
}
.full-goods-item-container .full-goods-item .goods-image .pro-tag-msg{
  display: inline-block;
  position: absolute;
  left: 8rpx;
  top: 8rpx;
  border: 1rpx solid var(--orange);
  background: var(--orangeLight);
  font-size: 20rpx;
  border-radius: 12rpx;
  line-height: 24rpx;
  padding: 0 8rpx;
  color: var(--orange);
  max-width: 132rpx;
}

.full-goods-item-container .full-goods-item .goods-image .goods-right-proTag {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 70rpx;
  height: 70rpx;
}

.full-goods-item-container .full-goods-item .goods-image .goods-proInfo {
  position: absolute;
  left: 24rpx;
  top: 300rpx;
  border: 2rpx solid #ffa601;
  border-radius: 13rpx;
  font-size: 20rpx;
  color: #ffa601;
  line-height: 0;
  padding: 13rpx 16rpx;
}

.full-goods-item-container .full-goods-item .goods-msg-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-name {
  width: 100%;
  line-height: 0;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 18rpx;
  padding: 16rpx 12rpx;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-tags {
  width: 100%;
  line-height: 0;
  margin-top: 18rpx;
  padding: 14rpx 12rpx;
  font-size: 24rpx;
  color: #94969C;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-tags.sale-price {
  text-decoration: line-through;
  margin-top: 0;
  padding-left: 32rpx;
}
.full-goods-item-container .full-goods-item .goods-msg-container .pro-logo{
  width: 64rpx;
  height: 32rpx;
  margin-top: 15rpx;
  background: #fff2f6;
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #ff4752;
  text-align: center;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-tags:after,
.full-goods-item-container .full-goods-item .goods-msg-container .goods-name:after{
  content: ";";
  opacity: 0;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 16rpx;
  padding: 0 0 0 20rpx;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container .goods-price {
  color: #ff4752;
  line-height: 0;
  padding: 16rpx 0;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container .big-font {
  font-size: 38rpx;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container .small-font {
  font-size: 24rpx;
}

.full-goods-item .goods-msg-container .goods-info-container .sales-unit {
  font-size: 24rpx;
  color: #94969C;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container .add-cart {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
  border-radius: 16rpx;
  background: url("https://shgm.jjyyx.com/m/images/icon_add.png") no-repeat center;
  background-size:contain;
}

.full-goods-item-container .full-goods-item .goods-msg-container .goods-info-container .shouqing-text {
  font-size: 24rpx;
  color: #94969C;
  line-height: 0;
  padding: 13rpx 0;
}
.goods-info-container .join-group {
  width: 120rpx;
  text-align: center;
  background: #FF4752;
  color: #FFF;
  line-height: 0;
  padding: 25rpx 0;
  border-radius: 25rpx;
  font-size: 28rpx;
}