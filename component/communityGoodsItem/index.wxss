.goods-item {
    display: flex;
    padding: 16rpx;
    position: relative;
    background: #fff;
    margin-bottom: 16rpx;
    border-radius: 16rpx;
}

.goods-item::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1rpx;
    width: 100%;
    background: #ededed;
}

.goods-img {
    width: 240rpx;
}

.goods-item .goods-img-cover {
    width: 208rpx;
    height: 208rpx;
    background: url('https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418') no-repeat center;
    background-size: 208rpx 208rpx;
}

.goods-info {
    padding-top: 16rpx;
}

.goods-title {
    width: 419rpx;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 36rpx;
    color: #444;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-dec {
    width: 260rpx;
    height: 28rpx;
    margin: 8rpx;
    font-size: 20rpx;
    font-weight: 300;
    line-height: 36rpx;
    color: #94969c;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.goods-pro-labal{
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}
.goods-type {
    width: 64rpx;
    height: 32rpx;
    border-radius: 18rpx;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 32rpx;
    color: #FF4752;
    text-align: center;
    border: 1px solid #FF4752;
}
.sales-volume{
    font-size: 20rpx;
    color: #FF4752;
    height: 36rpx;
    line-height: 36rpx;
    background: #FFECED;
    border-radius: 18rpx;
    padding: 0 12rpx;
    margin-left: 16rpx;
}
.goods-price {
    display: flex;
    margin-top: 16rpx;
}

.goods-price .p-price {
    height: 42rpx;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 36rpx;
    color: #FF4752;
    margin-right: 32rpx;
}

.goods-price .o-price {
    height: 28rpx;
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 300;
    line-height: 36rpx;
    color: #94969c;
}

.goods-price .o-price .o-price-value {
    display: inline-block;
    position: relative;
    padding: 0 10rpx;
}

.goods-price .o-price .o-price-value::after {
    content: "";
    position: absolute;
    left: 0;
    top: 46%;
    transform: translateY(-50%) scaleY(0.5);
    width: 100%;
    height: 1rpx;
    background: #707070;
}

.join {
    position: absolute;
    right: 32rpx;
    bottom: 40rpx;
    width: 128rpx;
    height: 48rpx;
    line-height: 48rpx;
    background: #FF4752;
    color: #fff;
    font-size: 24rpx;
    padding: 0;
    border: 0;
    border-radius: 48rpx;
}
.join.not-stock{
    /* background: #94969c; */
}
.join::after {
    border: 0;
}