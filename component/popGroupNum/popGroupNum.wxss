.num {
    padding: 0 18rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: rgba(68, 68, 68, 1);
}

.btn-confirm {
    height: 112rpx;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 112rpx;
    color: #fff;
    text-align: center;
    background-color: #FF4752;
}
.btn-cancel{
    position: absolute;
    top:0;
    right:0;
    width:50rpx;
    height: 50rpx;
