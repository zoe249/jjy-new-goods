/* component/collectItem/collectItem.wxss */
.r1bb {
    border-bottom: 1rpx solid #f4f4f4;
}

.pop-group-num {
    z-index: 996;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(49, 48, 49, 0.4);
}

.pop-group-num .cnt {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    padding: 32rpx 0 0;
}

.cover-image {
    position: absolute;
    top: -32rpx;
    left: 32rpx;
    width: 208rpx;
    height: 208rpx;
    background: #fff;
    border: 1rpx solid #FF4752;
    border-radius: 16rpx;
    background: url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat center;
    background-size: 100% 100%;
}

.goods {
    padding: 32rpx 32rpx 32rpx 272rpx;
    min-height: 208rpx;
}

.price {
    height: 42rpx;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 36rpx;
    color: #FF4752;
}

.goodsName {
    padding: 19rpx 0 0;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 36rpx;
    color: rgba(148, 150, 156, 1);
    word-break: break-all;
}

.goods-num {
    position: relative;
    width: 688rpx;
    height: 82rpx;
    margin: 0 auto 54rpx;
    border-top: 1px solid rgba(237, 237, 237, 1);
    border-bottom: 1px solid rgba(237, 237, 237, 1);
}

.num-title {

    line-height: 80rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(68, 68, 68, 1);
}

.num-box {
    position: absolute;
    right: 32rpx;
    top: 16rpx;
    border: 1rpx solid rgba(237, 237, 237, 1);
    border-radius: 24rpx;
    overflow: hidden;
    padding: 0 48rpx;
}

.num-add {
    position: absolute;
    right: 0;
    top: 1rpx;
    width: 48rpx;
    height: 48rpx;
    border-left: 1rpx solid rgba(237, 237, 237, 1);
    background: url("https://shgm.jjyyx.com/m/images/pop-num-add.png") no-repeat center;
    background-size: 18rpx auto;
}

.num-minus {
    position: absolute;
    left: 0;
    top: 1rpx;
    width: 48rpx;
    height: 48rpx;
    border-right: 1rpx solid rgba(237, 237, 237, 1);
     background: url("https://shgm.jjyyx.com/m/images/pop-num-minus.png") no-repeat center;
    background-size: 18rpx auto;
}

