.cartab{
  width: 100%;
  display: flex;
  background: #fff;
}
.cartab>.item{
  flex: 1;
  text-align: center;
  color: var(--gray) !important;
  padding: 10rpx 0;
  border-bottom: 4rpx solid #CECECE;
}
.cartab>.item.on{
  border-bottom: 4rpx solid #155C99;
}
.cartab>.item.on .tabname{
  color: #155C99
}
.cartab>.item .tabname{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 1.5;
}
.cartab>.item .tabtip{
  font-size: 20rpx;
  line-height: 1.4;
}