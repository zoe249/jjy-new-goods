/* component/goodsItem/goodsItem.wxss */

.goods-item {
  width: 336rpx;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.goods-item.no-delivery {
  opacity: 0.6;
  filter: grayscale(1);
}

.goods-item .goods-image {
  width: 336rpx;
  height: 336rpx;
  position: relative;
  /* padding: 30rpx 24rpx 16rpx; */
}

.goods-item .goods-image .goods-cover {
  width: 336rpx;
  height: 336rpx;
  background: #f4f4f4;/*url('https://m.fulaishiji.com/m/images/detail_goods_s.png') no-repeat center;
  background-size: 100% 100%;*/
}

.goods-item .goods-image .goods-left-proTag {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  width: 70rpx;
  height: 70rpx;
}

.goods-item .goods-image .goods-right-proTag {
  position: absolute;
  right: 40rpx;
  top: 46rpx;
  width: 70rpx;
  height: 70rpx;
}

.goods-item .goods-image .goods-proInfo {
  position: absolute;
  left: 24rpx;
  top: 300rpx;
  border: 2rpx solid #ffa601;
  border-radius: 13rpx;
  font-size: 20rpx;
  color: #ffa601;
  line-height: 0;
  padding: 13rpx 16rpx;
}

.goods-all-info-wrap {
  padding: 16rpx;
}

.goods-item .goods-name {
  width: 100%;
  line-height:35rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #373737;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}

.goods-item .goods-name-contaienr {
  display: -webkit-box;
  color: #444;
  font-size: 28rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.goods-item .goods-name-contaienr .produce-icon {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
}

.goods-item .goods-tags {
  width: 100%;
  line-height: 28rpx;
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #CF2231;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.goods-item .goods-tags-type {
  width: 100%;
  line-height: 28rpx;
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #CF2231;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.goods-item .goods-tags-type-item{
  display: inline-block;
  font-size:20rpx;
  font-weight:500;
  line-height:28rpx;
  color:#C1C0C0;
  background:#fff;
  border:1rpx solid #f4f4f4;
  border-radius:4rpx;
  padding: 0 4rpx;
  margin: 0 16rpx 0 0;
}
.goods-item .prime-price {
  text-decoration: line-through;
  line-height: 1;
  color: #999;
  font-size: 24rpx;
}

.goods-item .goods-tags:after, .goods-item .goods-name:after {
  content: ";";
  opacity: 0;
}

.goods-info-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 16rpx;
}

.goods-info-container .goods-price-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  min-height: 48rpx;
}

.group-info {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

.goods-info-container .goods-price {
  display: flex;
  align-items: flex-end;
}

.goods-info-container .big-font {
  font-size: 30rpx;
  color: #CF2231;
  line-height: 34rpx;
  font-weight: bold;
}

.goods-info-container .small-font {
  font-size: 30rpx;
  color: #CF2231;
  line-height: 1;
}

.goods-info-container .sales-unit {
  font-size: 24rpx;
  line-height: 1;
  color: #999;
}

.goods-info-container .goods-price .prime-price {
  display: inline-block;
  margin-left: 8rpx;
  color: #373737;
  font-size: 30rpx;
  font-weight: bold;
  text-decoration: line-through;
  margin-right: 10rpx;
  line-height: 34rpx;
}

.goods-info-container .add-cart {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  border-radius: 16rpx;
  background: url("https://m.fulaishiji.com/m/images/icon_add.png") no-repeat center;
  background-size: contain;
  /* box-shadow: 2rpx 4rpx 16px rgba(0, 0, 0, 0.16); */
}

.goods-info-container .add-cart::after {
  content: "";
  position: absolute;
  right: -16rpx;
  top: -24rpx;
  width: 70rpx;
  height: 70rpx;
}

.goods-info-container .shouqing-text {
  font-size: 24rpx;
  color: #999;
  line-height: 0;
  padding: 13rpx 0;
}

.goods-info-container .join-group {
  width: 96rpx;
  text-align: center;
  background: #CF2231;
  color: #fff;
  line-height: 0;
  padding: 20rpx 0;
  border-radius: 25rpx;
  font-size: 24rpx;
}
