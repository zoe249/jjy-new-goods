/* component/cabinetPop/cabinetPop.wxss */
.cabinet-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,.4);
}
.cabinet-pop{
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}
.cabinet-pop .tit{
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--black);
  padding:30rpx 20rpx;
}
.cabinet-pop scroll-view{
  height: 300rpx;
  width: 100%;
  /* padding: 0 20rpx; */
}
.cabinet-pop scroll-view view{
  padding: 10rpx 14rpx;
  border: 1px solid var(--black);
  font-size: 28rpx;
  line-height: 1.4;
  border-radius: 10rpx;
  margin: 0 20rpx;
  margin-bottom: 10rpx;
  text-align: justify;
}
.cabinet-pop scroll-view view.on{
  border: 1px solid var(--blueLight);
  background: var(--blueLight) ;
  color: #fff;
}
.btn-view{
  width: 100%;
  display: flex;
  margin-top: 40rpx;
}
.btn-view>view{
  width: 50%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size:32rpx;
  color: #fff;
  letter-spacing: 6rpx;
}
.btn-view>view.hui{
  background: #f2f2f2;
  color: var(--blueLight);
}
.btn-view>view.bilu{
  background: var(--blueLight);
  color: #fff;
}