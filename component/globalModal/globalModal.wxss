.global-modal-container {}

.global-modal-container .modal-mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1000;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, .2);
}

.global-modal-container .modal-body-container {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: 1001;
    width: 670rpx;
    min-height: 10rpx;
    overflow: hidden;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 0 40rpx rgba(0, 0, 0, .1);
}

.global-modal-container .modal-body-container .modal-header {
    width: 100%;
    height: 97rpx;
    line-height: 97rpx;
    font-size: 32rpx;
    text-align: center;
    color: #444;
    border-bottom: 1rpx solid #f1f1f1;
}

.global-modal-container .modal-body-container .modal-content {
    width: 100%;
    padding: 40rpx 60rpx;
    font-size: 28rpx;
    color: #444;
}

.global-modal-container .modal-body-container .modal-footer {
    display: flex;
    width: 100%;
    height: 95rpx;
    line-height: 95rpx;
    font-size: 32rpx;
    text-align: center;
    color: #444;
    border-top: 1rpx solid #f1f1f1;
}

.global-modal-container .modal-body-container .modal-footer .btn-cancel,
.global-modal-container .modal-body-container .modal-footer .btn-confirm {
    flex: 1;
}

.global-modal-container .modal-body-container .modal-footer .btn-confirm {
    background-color: #FF4752;
    color: #fff;
}