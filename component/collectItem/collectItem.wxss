/* component/collectItem/collectItem.wxss */
.r1bb {
    border-bottom: 1rpx solid #f4f4f4;
}
.collection_goods_wrap {
    padding: 32rpx 0;
}

.collection_goods_wrap .collection_goods_items .item-flag {
    position: absolute;
    top: 0;
    left: 16rpx;
    z-index: 9
}

.collection_goods_wrap .collection_goods_items .item-flag .img {
    width: 48rpx;
    
}

.collection_goods_wrap .collection_goods_items .item-img {
    float: left;
    width:176rpx;
    height: 176rpx;
    border: 1rpx solid #f4f4f4;
}

.collection_goods_wrap .collection_goods_items .item-img .img {
    width: 100%;
    height: 100%;
}

.collection_goods_wrap .collection_goods_items .item-info {
    position: relative;
    height:176rpx;
    margin-left: 192rpx;
    word-break: break-all;
    padding:0 32rpx 0 0;
}

.collection_goods_wrap .collection_goods_items .item-info .h3 {
    width: 100%;
    font-size: 24rpx;
    line-height: 32rpx;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
    color:#313031;
    padding:16rpx 0 0;
    text-align:left;
}

.collection_goods_wrap .collection_goods_items .item-info .h4 {
    text-align:left;
    height: 28rpx;
    margin-top: 8rpx;
    font-size: 20rpx;
    color: #94969C;
    line-height: 28rpx;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.collection_goods_wrap .collection_goods_items .item-info .h4.prime-price {
    font-size: 22rpx;
    text-decoration: line-through;
}

.collection_goods_wrap .collection_goods_items .item-info .price {
    position: absolute;
    bottom: 10rpx;
    left: 0;
    height: 40rpx;
    color: #FF4752;
    font-size: 0;
}

.collection_goods_wrap .collection_goods_items .item-info .price .em,.collection_goods_wrap .collection_goods_items .item-info .price .s {
    display: inline-block;
    vertical-align: top;
}

.collection_goods_wrap .collection_goods_items .item-info .price .em {
    line-height: 42rpx;
    font-size: 36rpx;
}

.collection_goods_wrap .collection_goods_items .item-info .price .em:before {
    content: 'ï¿¥';
    font-size: 24rpx;
    margin-right: 0;
    line-height: 1;
}

.collection_goods_wrap .collection_goods_items .item-info .price .s {
    padding:2rpx 0 0;
    line-height: 42rpx;
    font-size: 20rpx;
    color: #94969C;
}
.collection_goods_wrap .collection_goods_items .item-info .del{
  position: absolute;
  right:-16rpx;
  top:-16rpx;
  width: 64rpx;
  height: 64rpx;
  background: url("https://shgm.jjyyx.com/m/images/icon-collect-del.png") no-repeat center;
  background-size: 40rpx;
  text-indent: -999rpx;
}