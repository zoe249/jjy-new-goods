.li {
    margin-bottom: 16rpx;
    background-color: #fff;
   border-radius: 16rpx;
}
.li .get-time-box{
  position: relative;
  padding:0rpx 32rpx 0;
  line-height:52rpx;
  color:#313031;
  font-size:24rpx;
}
.li .get-time-text{
  border-bottom:1rpx solid #E7E7E7;
}
.li .get-time-box .time{
  position: absolute;
  top:10rpx;
  right:32rpx;
  line-height:52rpx;
}


.li .head {
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    background-size: 16rpx auto;
}

.li .head .order-status{
  position: absolute;
  right:32rpx;
  height: 88rpx;
  line-height: 88rpx;
  top:0;
  font-size:24rpx;
  color:#313031;
}

.li .head .text {
    width: 580rpx;
    display: inline-block;
    height: 88rpx;
    vertical-align: middle;
    line-height: 88rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 24rpx;
    color:#313031;
    font-weight:500;
}

.li .head .text .icon-pintuan {
    position: absolute;
    right: 90rpx;
    top: 0;
    background: url("https://shgm.jjyyx.com/m/images/icon_pintuan.png") no-repeat center;
    width: 80rpx;
    height: 80rpx;
    background-size: 100%;
}

.li .head .text .icon-global {
    display: inline-block;
    height: 32rpx;
    width: 110rpx;
    vertical-align: middle;
    border-radius: 0;
    margin: 0 0 0 12rpx;
}

.li .head .text .span {
    display: inline-block;
    margin-left: 8rpx;
    height: 32rpx;
    line-height: 32rpx;
    vertical-align: top;
    color: var(--blue);
    background-color: #F0F3F6;
    padding: 0 6rpx;
    border-radius: 4rpx;
    font-size:24rpx;
    margin-top:26rpx;

}

.li .head .text .customer-service {
    background-color: #e4f1ff;
    color: #5db1ff;
}

.li .cnt {
    padding: 0rpx 16rpx;
}

.li .cnt .one {
    min-height: 170rpx;
    position: relative;
    padding:0rpx 16rpx 30rpx;
    /* background-color: #F8F8F8; */
}

.li .cnt .one .image {
    display: table-cell;
    position: relative;
    height: 144rpx;
    width: 175rpx;
    background: #fcfcfc url("https://shgm.jjyyx.com/m/images/detail_goods_s.png?t=418") no-repeat 0 center;
    background-size:144rpx;
    float:left;
}
.li .cnt .one .image image {
    display: block;
    height: 144rpx;
    width: 144rpx;
    border: 1rpx solid #E7E7E7;
}

.li .cnt .one .goodsName{
  font-size: 24rpx;
  color:#313031;
  line-height:30rpx;
  height:60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.li .cnt .one .goodsSpec{
  font-size: 22rpx;
  color:#94969C;
  line-height:30rpx;
}
.li .cnt .one .getTime{
  position:absolute;
  bottom:31rpx;
  left:190rpx;
  font-size: 22rpx;
  color:#94969C;
  line-height:30rpx;
}
.li .cnt .one .pay-box{
  position:absolute;
  bottom:31rpx;
  right:0rpx;
  font-size: 24rpx;
  color:#313031;
  line-height:42rpx;
}
.li .cnt .one .pay-box .pay-price{
  display: inline-block;
  font-size: 26rpx;
  line-height:42rpx;
}
.li .cnt .one .pay-box .pay-text{
  display: inline-block;
}
.get-time-box{
  padding:0 32rpx;
}
.get-time-box .get-time{
  border-top:1rpx solid #E7E7E7;
  padding:20rpx 0;
  font-size:24rpx;
  line-height:32rpx;
  color:#94969C;
}

