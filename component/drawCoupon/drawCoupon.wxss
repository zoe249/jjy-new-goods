/* component/drawCoupon/drawCoupon.wxss */
.draw-coupon-dialog{
  position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: -1;
	opacity: 0;
	display: none;
	background: rgba(0, 0, 0, 0.6);
}
.draw-coupon-dialog::before {
	content: "";
	display: inline-block;
	height: 100%;
	vertical-align: middle;
}
.draw-coupon-dialog.show{
	display: flex;
	align-items: center;
	justify-content: center;
	opacity: 1;
	visibility: visible;
	z-index: 1024;
}
.draw-coupon-dialog-cont{
	position: relative;
	display: inline-block;
	vertical-align: middle;
	margin-left: auto;
	margin-right: auto;
	max-width: 100%;
	border-radius: 10rpx;
	overflow: hidden;
}
.draw-img{
  width: 496rpx;
  min-height: 560rpx;
}